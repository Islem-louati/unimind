{% extends 'layout/dashboard.html.twig' %}

{% block page_title %}Nouveau Suivi{% endblock %}

{% block body_class %}g-sidenav-show bg-gray-100{% endblock %}

{% block body %}
<div class="min-height-300 bg-primary position-absolute w-100"></div>

<aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4" id="sidenav-main">
    <div class="sidenav-header">
        <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
        <a class="navbar-brand m-0" href="{{ path('app_home') }}">
            <img src="{{ asset('assets/img/unimind-logo.png') }}" width="26px" height="26px" class="navbar-brand-img h-100" alt="UniMind Logo">
            <span class="ms-1 font-weight-bold">UniMind</span>
        </a>
    </div>
    <hr class="horizontal dark mt-0">
    <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_home') }}">
                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                        <i class="fas fa-home text-primary text-sm opacity-10"></i>
                    </div>
                    <span class="nav-link-text ms-1">Accueil</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_traitement_index') }}">
                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                        <i class="fas fa-stethoscope text-primary text-sm opacity-10"></i>
                    </div>
                    <span class="nav-link-text ms-1">Traitements</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_traitement_show', {'id': traitement.id}) }}">
                    <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                        <i class="fas fa-eye text-primary text-sm opacity-10"></i>
                    </div>
                    <span class="nav-link-text ms-1">Traitement</span>
                </a>
            </li>
        </ul>
    </div>
</aside>

<main class="main-content position-relative border-radius-lg">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('app_traitement_index') }}">Traitements</a></li>
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('app_traitement_show', {'id': traitement.id}) }}">{{ traitement.titre }}</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Nouveau suivi</li>
                </ol>
            </nav>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Info traitement -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h6 class="mb-3">Traitement concerné</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Titre:</strong> {{ traitement.titre }}</p>
                                <p><strong>Patient:</strong> {{ traitement.etudiant.fullName }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Psychologue:</strong> {{ traitement.psychologue.fullName }}</p>
                                <p><strong>Objectif:</strong> {{ traitement.objectifTherapeutique }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulaire de suivi -->
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6 class="mb-0">
                            {% if user_role == 'etudiant' %}
                                Ajouter mon suivi
                            {% else %}
                                Ajouter un suivi
                            {% endif %}
                        </h6>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        
                        <!-- Informations générales -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-primary">
                                    <i class="fas fa-info-circle me-2"></i>Informations générales
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.dateSuivi, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.dateSuivi, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            {{ form_errors(form.dateSuivi) }}
                                        </div>
                                    </div>
                                    {% if form.heureEffective is defined %}
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.heureEffective, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.heureEffective, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            {{ form_errors(form.heureEffective) }}
                                        </div>
                                    </div>
                                    {% endif %}
                                    {% if form.heurePrevue is defined %}
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.heurePrevue, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.heurePrevue, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            {{ form_errors(form.heurePrevue) }}
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>

                                {% if user_role == 'etudiant' %}
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.effectue, {'attr': {'class': 'form-check-input form-check-input-lg'}}) }}
                                        {{ form_label(form.effectue, null, {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                                        {{ form_errors(form.effectue) }}
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Observations -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-info">
                                    <i class="fas fa-comments me-2"></i>Observations
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    {% if user_role == 'etudiant' %}
                                        {{ form_label(form.observations, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                        {{ form_widget(form.observations, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Décrivez comment vous vous sentez, vos observations, les difficultés rencontrées...'}}) }}
                                        {{ form_errors(form.observations) }}
                                    {% else %}
                                        {{ form_label(form.observationsPsy, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                        {{ form_widget(form.observationsPsy, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Notes du psychologue sur le suivi, observations, recommandations...'}}) }}
                                        {{ form_errors(form.observationsPsy) }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Validation psychologue -->
                        {% if user_role == 'psychologue' %}
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-warning">
                                    <i class="fas fa-check-circle me-2"></i>Validation
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check form-switch mt-4">
                                            {{ form_widget(form.valide, {'attr': {'class': 'form-check-input form-check-input-lg'}}) }}
                                            {{ form_label(form.valide, null, {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                                            {{ form_errors(form.valide) }}
                                        </div>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>Cochez pour valider le suivi (uniquement si le suivi est effectué)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="{{ path('app_traitement_show', {'id': traitement.id}) }}" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Retour au traitement
                            </a>
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg px-5'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Instructions -->
                {% if user_role == 'etudiant' %}
                <div class="card">
                    <div class="card-body">
                        <h6 class="mb-3">Instructions pour le suivi</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-info-circle text-primary me-2"></i>
                                Sélectionnez la date du suivi
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-comment text-primary me-2"></i>
                                Ajoutez vos observations et commentaires
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Votre suivi sera visible par votre psychologue pour validation
                            </li>
                        </ul>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</main>

<!-- Flash messages -->
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999;" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

{% block javascripts %}
{{ parent() }}
<script>
    // Auto-hide flash messages
    setTimeout(function() {
        $('.alert').fadeOut();
    }, 5000);
</script>
{% endblock %}
{% endblock %}