{% extends 'base_psychologue.html.twig' %}

{% block title %}Modifier {{ traitement.titre }}{% endblock %}
{% block page_title %}Modifier {{ traitement.titre }}{% endblock %}
{% block breadcrumb_title %}Modifier Traitement{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-edit me-2"></i>
                        Modifier le Traitement
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Flash messages -->
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.titre, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.titre.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.categorie, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.categorie.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.type, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.type.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                                    {% for error in form.description.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.priorite, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.priorite, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.priorite.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.statut, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.statut.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.duree_jours, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.duree_jours, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.duree_jours.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.date_debut, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.date_debut.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.date_fin, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.date_fin.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.dosage, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.dosage, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.dosage.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.objectif_therapeutique, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.objectif_therapeutique, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                                    {% for error in form.objectif_therapeutique.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.etudiant, null, {'label_attr': {'class': 'form-control-label'}}) }}
                                    {{ form_widget(form.etudiant, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.etudiant.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="{{ path('app_traitement_show', {'id': traitement.id}) }}" class="btn btn-outline-secondary btn-lg me-3">
                                <i class="fas fa-arrow-left me-2"></i>Retour
                            </a>
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-warning btn-lg px-5'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
