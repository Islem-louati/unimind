{% extends 'base_psychologue.html.twig' %}

{% block title %}Nouveau Traitement{% endblock %}
{% block page_title %}Nouveau Traitement{% endblock %}
{% block breadcrumb_title %}Nouveau Traitement{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-plus me-2"></i>
                        Créer un nouveau Traitement
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Flash messages -->
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <!-- Informations générales -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-primary">
                                    <i class="fas fa-info-circle me-2"></i>Informations générales
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.titre, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Titre du traitement...', 'id': 'traitement_titre'}}) }}
                                            
                                            {% for error in form.titre.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            {{ form_label(form.categorie, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control form-select-lg'}}) }}
                                            {% for error in form.categorie.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            {{ form_label(form.type, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.type, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Type de traitement...'}}) }}
                                            {% for error in form.type.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Description détaillée du traitement...', 'id': 'traitement_description'}}) }}
                                    {% for error in form.description.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <!-- Planification -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-warning">
                                    <i class="fas fa-calendar-alt me-2"></i>Planification
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.priorite, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.priorite, {'attr': {'class': 'form-control form-select-lg'}}) }}
                                            {% for error in form.priorite.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.statut, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.statut, {'attr': {'class': 'form-control form-select-lg'}}) }}
                                            {% for error in form.statut.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.duree_jours, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.duree_jours, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Durée en jours'}}) }}
                                            {% for error in form.duree_jours.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.date_debut, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.date_debut, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            {% for error in form.date_debut.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.date_fin, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.date_fin, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            {% for error in form.date_fin.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(form.dosage, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                            {{ form_widget(form.dosage, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Dosage si applicable'}}) }}
                                            {% for error in form.dosage.vars.errors %}
                                                <div class="text-danger small mt-1 fw-bold">
                                                    <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Objectifs -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-success">
                                    <i class="fas fa-bullseye me-2"></i>Objectifs thérapeutiques
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    {{ form_label(form.objectif_therapeutique, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                    {{ form_widget(form.objectif_therapeutique, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Objectifs à atteindre avec ce traitement...', 'id': 'traitement_objectif_therapeutique'}}) }}
                                    {% for error in form.objectif_therapeutique.vars.errors %}
                                        <div class="text-danger small mt-1 fw-bold">
                                            <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                        </div>
                                    {% endfor %}
                                </div>

                                {% if form.etudiant is defined %}
                                    <div class="mb-3">
                                        {{ form_label(form.etudiant, null, {'label_attr': {'class': 'form-control-label fw-bold'}}) }}
                                        {{ form_widget(form.etudiant, {'attr': {'class': 'form-control form-select-lg'}}) }}
                                        {% for error in form.etudiant.vars.errors %}
                                            <div class="text-danger small mt-1 fw-bold">
                                                <i class="fas fa-exclamation-circle me-1"></i>{{ error.message }}
                                            </div>
                                        {% endfor %}
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>Sélectionnez l'étudiant qui suivra ce traitement
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="{{ path('app_traitement_index') }}" class="btn btn-outline-secondary btn-lg me-3">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                            </a>
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg px-5'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
