{% extends 'layout/dashboard.html.twig' %}

{% block page_title %}{{ traitement.titre }}{% endblock %}

{% block body_class %}g-sidenav-show bg-gray-100{% endblock %}

{% block body %}
<div class="min-height-300 bg-primary position-absolute w-100"></div>

<aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs
border-0 border-radius-xl my-3 fixed-start ms-4" id="sidenav-main">
    <div class="sidenav-header">
        <i class="fas fa-times p-3 cursor-pointer text-secondary
opacity-5 position-absolute end-0 top-0 d-none d-xl-none"
aria-hidden="true" id="iconSidenav"></i>

    </div>
    <hr class="horizontal dark mt-0">
    <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
        <ul class="navbar-nav">
            <li class="nav-item">

            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_traitement_index') }}">
                    <div class="icon icon-shape icon-sm
border-radius-md text-center me-2 d-flex align-items-center
justify-content-center">
                        <i class="fas fa-stethoscope text-primary
text-sm opacity-10"></i>
                    </div>
                    <span class="nav-link-text ms-1">Traitements</span>
                </a>
            </li>
        </ul>
    </div>
</aside>

<main class="main-content position-relative border-radius-lg">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4
shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1
px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a
class="opacity-5 text-dark" href="{{ path('app_traitement_index')
}}">Traitements</a></li>
                    <li class="breadcrumb-item text-sm text-dark
active" aria-current="page">{{ traitement.titre }}</li>
                </ol>
            </nav>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-lg-8">
                <!-- Détails du traitement -->
                <div class="card mb-4">
                    <div class="card-header pb-0 d-flex
justify-content-between align-items-center">
                        <h6 class="mb-0">Détails du traitement</h6>
                        {% if can_edit %}
                        <div>
                            <a href="{{
path('app_suivi_traitement_index') }}" class="btn btn-info btn-sm
me-2">
                                <i class="fas fa-calendar-check
me-2"></i>SuiviTraitement
                            </a>
                            <a href="{{ path('app_traitement_edit',
{'id': traitement.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit me-2"></i>Modifier
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-sm">Informations générales</h6>
                                <p><strong>Titre:</strong> {{
traitement.titre }}</p>
                                <p><strong>Type:</strong> {{
traitement.type }}</p>
                                <p><strong>Catégorie:</strong> {{
traitement.categorieLabel }}</p>
                                <p><strong>Priorité:</strong>
                                    <span class="badge {% if
traitement.priorite == 'HAUTE' %}bg-gradient-danger{% elseif
traitement.priorite == 'MOYENNE' %}bg-gradient-warning{% else
%}bg-gradient-secondary{% endif %}">
                                        {{ traitement.prioriteLabel }}
                                    </span>
                                </p>
                                <p><strong>Statut:</strong>
                                    <span class="badge {% if
traitement.statut == 'EN_COURS' %}bg-gradient-info{% elseif
traitement.statut == 'TERMINE' %}bg-gradient-success{% else
%}bg-gradient-warning{% endif %}">
                                        {{ traitement.statutLabel }}
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-sm">Calendrier</h6>
                                <p><strong>Date de début:</strong> {{
traitement.dateDebut|date('d/m/Y') }}</p>
                                <p><strong>Date de fin:</strong> {{
traitement.dateFin ? traitement.dateFin|date('d/m/Y') : 'Non définie'
}}</p>
                                <p><strong>Durée:</strong> {{
traitement.dureeJours }} jours</p>
                                <p><strong>Jours restants:</strong> {{
traitement.joursRestants }}</p>
                                <p><strong>Progression:</strong> {{
traitement.pourcentageCompletion|number_format(1) }}%</p>
                                <div class="progress">
                                    <div class="progress-bar
bg-gradient-info" role="progressbar" style="width: {{
traitement.pourcentageCompletion }}%;" aria-valuenow="{{
traitement.pourcentageCompletion }}" aria-valuemin="0"
aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>

                        {% if traitement.dosage %}
                        <div class="mt-3">
                            <h6 class="text-sm">Dosage</h6>
                            <p>{{ traitement.dosage }}</p>
                        </div>
                        {% endif %}

                        <div class="mt-3">
                            <h6 class="text-sm">Description</h6>
                            <p>{{ traitement.description }}</p>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-sm">Type de traitement</h6>
                            <p>{{ traitement.type }}</p>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-sm">Objectif thérapeutique</h6>
                            <p>{{ traitement.objectifTherapeutique }}</p>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <h6 class="text-sm">Patient</h6>
                                <p><strong>Nom:</strong> {{
traitement.etudiant.fullName }}</p>
                                <p><strong>Email:</strong> {{
traitement.etudiant.email }}</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-sm">Psychologue</h6>
                                <p><strong>Nom:</strong> {{
traitement.psychologue.fullName }}</p>
                                <p><strong>Email:</strong> {{
traitement.psychologue.email }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Suivis du traitement -->
                <div class="card">
                    <div class="card-header pb-0 d-flex
justify-content-between align-items-center">
                        <h6 class="mb-0">Suivis du traitement</h6>
                        {% if can_manage_suivis %}
                        <a href="{{ path('app_suivi_traitement_new',
{'traitement_id': traitement.id}) }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-2"></i>Ajouter un suivi
                        </a>
                        {% elseif is_granted('ROLE_ETUDIANT') %}
                        <a href="{{
path('app_suivi_traitement_select_traitement') }}" class="btn
btn-success btn-sm">
                            <i class="fas fa-plus me-2"></i>Ajouter un suivi
                        </a>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        {% if traitement.suivis|length > 0 %}
                        <div class="table-responsive">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase
text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                        <th class="text-uppercase
text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                                        <th class="text-uppercase
text-secondary text-xxs font-weight-bolder opacity-7">Heure</th>
                                        <th class="text-uppercase
text-secondary text-xxs font-weight-bolder opacity-7">Évaluation</th>
                                        <th class="text-uppercase
text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for suivi in
traitement.suivis|sort((a, b) => a.dateSuivi <=> b.dateSuivi) %}
                                    <tr>
                                        <td>
                                            <p class="text-sm
font-weight-bold mb-0">{{ suivi.dateSuivi|date('d/m/Y') }}</p>
                                            <p class="text-xs
text-secondary mb-0">{{ suivi.jourSemaine }}</p>
                                        </td>
                                        <td>
                                            <span class="badge
badge-sm bg-{{ suivi.couleurStatut }}">
                                                {{ suivi.statutDetaille }}
                                            </span>
                                        </td>
                                        <td>
                                            <p class="text-sm mb-0">{{
suivi.heureEffective ? suivi.heureEffective|date('H:i') : '-' }}</p>
                                        </td>
                                        <td>
                                            <p class="text-sm mb-0">{{
suivi.evaluationEtoiles ?: '-' }}</p>
                                        </td>
                                        <td class="align-middle">
                                            <a href="{{
path('app_suivi_traitement_show', {'id': suivi.id}) }}"
class="text-secondary font-weight-bold text-xs" data-toggle="tooltip"
data-original-title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            {% if can_manage_suivis %}
                                                {% if user_role ==
'psychologue' and suivi.effectue and not suivi.valide %}
                                                <form method="post"
action="{{ path('app_suivi_traitement_valider', {'id': suivi.id}) }}"
style="display: inline;">
                                                    <input
type="hidden" name="_token" value="{{ csrf_token('valider' ~ suivi.id)
}}">
                                                    <button
type="submit" class="text-success font-weight-bold text-xs"
data-toggle="tooltip" data-original-title="Valider" onclick="return
confirm('Valider ce suivi ?')">
                                                        <i class="fas
fa-check"></i>
                                                    </button>
                                                </form>
                                                {% endif %}
                                                {% if user_role ==
'etudiant' and not suivi.effectue %}
                                                <form method="post"
action="{{ path('app_suivi_traitement_effectuer', {'id': suivi.id})
}}" style="display: inline;">
                                                    <input
type="hidden" name="_token" value="{{ csrf_token('effectuer' ~
suivi.id) }}">
                                                    <button
type="submit" class="text-info font-weight-bold text-xs"
data-toggle="tooltip" data-original-title="Effectuer" onclick="return
confirm('Marquer ce suivi comme effectué ?')">
                                                        <i class="fas
fa-check-circle"></i>
                                                    </button>
                                                </form>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <p class="text-center">Aucun suivi pour ce
traitement</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Statistiques -->
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6 class="mb-0">Statistiques</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 text-center">
                                <h5 class="font-weight-bolder">{{
traitement.suivis|length }}</h5>
                                <p class="text-xs">Total suivis</p>
                            </div>
                            <div class="col-6 text-center">
                                <h5 class="font-weight-bolder">{{
traitement.suivis|filter(suivi => suivi.valide)|length }}</h5>
                                <p class="text-xs">Suivis validés</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-6 text-center">
                                <h5 class="font-weight-bolder">{{
traitement.suivis|filter(suivi => suivi.effectue and not
suivi.valide)|length }}</h5>
                                <p class="text-xs">En attente</p>
                            </div>
                            <div class="col-6 text-center">
                                <h5 class="font-weight-bolder">{{
traitement.suivis|filter(suivi => not suivi.effectue and
suivi.isEnRetard)|length }}</h5>
                                <p class="text-xs">En retard</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions rapides -->
                {% if can_manage_suivis %}
                <div class="card">
                    <div class="card-header pb-0">
                        <h6 class="mb-0">Actions rapides</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{
path('app_suivi_traitement_index') }}" class="btn btn-outline-primary
btn-sm">
                                <i class="fas fa-list me-2"></i>Voir
tous les suivis
                            </a>
                            {% if user_role == 'psychologue' %}
                            <a href="{{
path('app_suivi_traitement_a_valider') }}" class="btn
btn-outline-success btn-sm">
                                <i class="fas fa-check-circle
me-2"></i>Suivis à valider
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</main>

<!-- Flash messages -->
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type == 'error' ? 'danger' : type
}} alert-dismissible fade show position-fixed" style="top: 20px;
right: 20px; z-index: 9999;" role="alert">
            {{ message }}
            <button type="button" class="btn-close"
data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

{% block javascripts %}
{{ parent() }}
<script>
    // Auto-hide flash messages
    setTimeout(function() {
        $('.alert').fadeOut();
    }, 5000);
</script>
{% endblock %}
{% endblock %}