            padding: 1rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
            margin: 1rem 16px;
            border: none;
        }
        
        .sidebar-user-info .text-white {
            color: #344767 !important;
            font-weight: 600;
        }
        
        .sidebar-user-info .text-xs {
            color: #6c757d !important;
        }
        
        .docs-info {
            color: #6c757d !important;
        }
        
        .docs-info h6 {
            color: #344767 !important;
            font-weight: 600;
        }
        
        /* Badges personnalisés */
