            color: #f5365c !important;
        }
        
        .nav-link.text-danger:hover {
            background-color: rgba(245, 54, 92, 0.05);
        }
        
        /* Breadcrumb */
        .breadcrumb {
            background: transparent;
        }
        
        .breadcrumb-item a {
            color: #5e72e4;
        }
        
        .breadcrumb-item.active {
            color: #6c757d;
