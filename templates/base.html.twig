    <!-- CSS Files -->
    <link id="pagestyle" href="{{ asset('assets/css/argon-dashboard.css?v=2.1.0') }}" rel="stylesheet" />
    
    <!-- Custom CSS -->
    <style>
        /* Fond violet très clair - comme l'image */
        body.bg-gray-100 {
            background: linear-gradient(135deg, #f5f7ff 0%, #f3f0ff 100%) !important;
        }
        
        /* Sidebar style - BLANC comme Creative Tim */
        .sidenav {
            background: #ffffff !important;
            box-shadow: 0 0 2rem 0 rgba(136, 152, 170, 0.15) !important;
            border-radius: 0.75rem;
        }
        
        .sidenav .navbar-brand .text-white {
            color: #344767 !important;
        }
        
        .sidenav .navbar-nav .nav-link {
            color: #344767 !important;
            margin: 2px 16px;
            border-radius: 0.375rem;
            font-weight: 400;
        }
        
        .sidenav .navbar-nav .nav-link:hover {
            color: #5e72e4 !important;
            background-color: rgba(94, 114, 228, 0.05);
        }
        
        .sidenav .navbar-nav .nav-link.active {
            color: #5e72e4 !important;
            background-color: rgba(94, 114, 228, 0.1);
            font-weight: 600;
            box-shadow: none;
        }
        
        .sidenav .nav-link-text {
            font-weight: 400;
        }
        
        /* User info sidebar - Style comme l'image Creative Tim */
        .sidebar-user-info {
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
            margin: 1rem 16px;
            border: none;
        }
        
        .sidebar-user-info .text-white {
            color: #344767 !important;
            font-weight: 600;
        }
        
        .sidebar-user-info .text-xs {
            color: #6c757d !important;
        }
        
        .docs-info {
            color: #6c757d !important;
        }
        
        .docs-info h6 {
            color: #344767 !important;
            font-weight: 600;
        }
        
        /* Badges personnalisés */
        .badge-admin {
            background: linear-gradient(135deg, #f5365c 0%, #f56036 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        .badge-etudiant {
            background: linear-gradient(135deg, #11cdef 0%, #1171ef 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        .badge-psychologue {
            background: linear-gradient(135deg, #fb6340 0%, #fbb140 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        .badge-responsable {
            background: linear-gradient(135deg, #2dce89 0%, #2dcecc 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        /* Avatar */
        .avatar-initials {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            background: linear-gradient(135deg, #5e72e4 0%, #825ee4 100%);
            color: white;
            border: 2px solid #e9ecef;
        }
        
        /* Notification badge */
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 0.65rem;
            padding: 0.25rem 0.5rem;
            background: #f5365c;
            color: white;
            border: 2px solid #ffffff;
            border-radius: 50%;
            min-width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        /* Navbar principal - Transparent comme l'image */
        .navbar-main {
            background: transparent !important;
            box-shadow: none !important;
        }
        
        .navbar-main .text-white {
            color: #5e72e4 !important;
        }
        
        .navbar-main .opacity-7 {
            color: #666666 !important;
        }
        
        /* Cards - sans bordure blanche */
        .card {
            border: none;
            box-shadow: 0 4px 20px -2px rgba(94, 114, 228, 0.15);
            border-radius: 16px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
        }
        
        .card-header {
            background: transparent;
            border-bottom: 1px solid rgba(94, 114, 228, 0.1);
            border-radius: 16px 16px 0 0 !important;
            padding: 1.25rem 1.5rem;
        }
        
        /* Boutons */
        .btn-primary {
            background: linear-gradient(135deg, #5e72e4 0%, #825ee4 100%);
            border: none;
            box-shadow: 0 4px 15px 0 rgba(94, 114, 228, 0.3);
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #4e62d4 0%, #724ed4 100%);
            box-shadow: 0 6px 20px 0 rgba(94, 114, 228, 0.4);
            transform: translateY(-1px);
        }
        
        /* Alertes */
        .alert {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.08);
            backdrop-filter: blur(10px);
        }
        
        /* Table */
        .table thead th {
            border-bottom: 2px solid rgba(94, 114, 228, 0.1);
            background: transparent;
            font-weight: 700;
            color: #5e72e4;
        }
        
        /* Icônes sidebar - Style unifié */
        .nav-icon {
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            border-radius: 8px;
            background: rgba(94, 114, 228, 0.1);
        }
        
        .nav-icon i {
            color: #5e72e4 !important;
            font-size: 0.875rem;
        }
        
        .nav-link.active .nav-icon {
            background: rgba(94, 114, 228, 0.2);
        }
        
        .nav-link.active .nav-icon i {
            color: #5e72e4 !important;
        }
        
        /* Titres de séparation dans sidebar - Style Creative Tim */
        .text-uppercase.text-xs.font-weight-bolder.opacity-6 {
            color: #6c757d !important;
            padding-left: 1rem;
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
            letter-spacing: 0.1em;
        }
        
        /* HR dans sidebar */
        .horizontal.dark {
            border-color: rgba(0, 0, 0, 0.1) !important;
        }
        
        /* Bordure sur les avatars */
        .border-white {
            border-color: #ffffff !important;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            body.bg-gray-100 {
                background: linear-gradient(135deg, #f5f7ff 0%, #f3f0ff 100%) !important;
            }
            
            .sidenav {
                background: #ffffff !important;
            }
        }
        
        /* Animation douce */
        .nav-link, .btn, .card {
            transition: all 0.3s ease;
        }
        
        /* Footer sidebar */
        .sidenav-footer {
            margin-top: auto;
            background: transparent;
        }
        
        /* Scrollbar personnalisée */
        ::-webkit-scrollbar {
            width: 6px;
        }
        
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb {
            background: rgba(94, 114, 228, 0.3);
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: rgba(94, 114, 228, 0.5);
        }
        
        /* Icônes dans le dropdown utilisateur */
        .dropdown-menu .avatar-sm i {
            color: white !important;
        }
        
        /* Input de recherche dans navbar */
        .input-group-outline .input-group-text {
            background: rgba(255, 255, 255, 0.9);
            color: #5e72e4;
            border: none;
            border-radius: 12px 0 0 12px;
        }
        
        .input-group-outline .form-control {
            background: rgba(255, 255, 255, 0.9);
            color: #333;
            border: none;
            border-radius: 0 12px 12px 0;
        }
        
        /* Icône de fermeture sidebar mobile */
        .fas.fa-times.text-white {
            color: #344767 !important;
        }
        
        /* Bouton déconnexion */
        .nav-link.text-danger .nav-icon {
            background: rgba(245, 54, 92, 0.1);
        }
        
        .nav-link.text-danger .nav-icon i {
            color: #f5365c !important;
        }
        
        .nav-link.text-danger .nav-link-text {
            color: #f5365c !important;
        }
        
        .nav-link.text-danger:hover {
            background-color: rgba(245, 54, 92, 0.05);
        }
        
        /* Breadcrumb */
        .breadcrumb {
            background: transparent;
        }
        
        .breadcrumb-item a {
            color: #5e72e4;
            text-decoration: none;
        }
        
        .breadcrumb-item.active {
            color: #6c757d;
        }
        
        /* Dropdown menu */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 40px rgba(94, 114, 228, 0.15);
            border-radius: 12px;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
        }
        
        /* Toggler pour sidebar mobile */
        .sidenav-toggler-inner {
            background: #5e72e4;
        }
        
        .sidenav-toggler-line {
            background: #5e72e4;
        }
        
        /* Conteneur principal */
        .container-fluid.py-4 {
            padding-top: 1.5rem !important;
            padding-bottom: 1.5rem !important;
        }
        
        /* Stat cards - comme dans l'image */
        .stat-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 16px;
            padding: 1.5rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(94, 114, 228, 0.1);
            transition: transform 0.3s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(94, 114, 228, 0.15);
        }
        
        /* Chart containers */
        .chart-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 16px;
            padding: 1.5rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(94, 114, 228, 0.1);
        }
        
        /* Style pour le breadcrumb simplifié */
        .breadcrumb-simple {
            background: transparent;
            padding: 1rem 1.5rem 0;
        }
        
        .breadcrumb-simple .breadcrumb-item a {
            color: #5e72e4;
            text-decoration: none;
        }
        
        .breadcrumb-simple .breadcrumb-item.active {
            color: #6c757d;
        }
        
        /* Titre de page */
        .page-title {
            color: #344767;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-left: 1.5rem;
        }
        
        .page-title i {
            color: #5e72e4;
            margin-right: 0.5rem;
        }
        
        /* Style pour le brand personnalisé étudiant */
        .brand-custom {
            padding: 1rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            margin-bottom: 0.5rem;
        }
        
        .brand-custom .logo {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(94, 114, 228, 0.1);
            border-radius: 10px;
        }
        
        .brand-custom .logo i {
            font-size: 1.5rem;
            color: #5e72e4;
        }
        
        .brand-custom h3 {
            font-size: 1.25rem;
            color: #344767;
            font-weight: 600;
            margin-left: 0.75rem;
            margin-bottom: 0;
        }
        
        /* S'assurer que les modals s'affichent au-dessus de la sidebar */
        .sidenav, #sidenav-main {
            z-index: 1099 !important;
        }
        
        .modal-backdrop {
            z-index: 1199 !important;
        }
        
        .modal {
            z-index: 1200 !important;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>

