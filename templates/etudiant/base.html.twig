{% extends 'base.html.twig' %}

{% block sidebar %}
<div class="col-md-2 sidebar">
    <div class="brand">
        <div class="d-flex align-items-center justify-content-center">
            <div class="logo">
                <i class="fas fa-graduation-cap text-primary"></i>
            </div>
            <h3>UniMind Étudiant</h3>
        </div>
    </div>
    
    <nav class="nav flex-column mt-4">
        <a class="nav-link {{ app.request.attributes.get('_route') == 'etudiant_dashboard' ? 'active' : '' }}" 
           href="{{ path('etudiant_dashboard') }}">
            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
        </a>
        
        <a class="nav-link {{ app.request.attributes.get('_route') starts with 'etudiant_questionnaire' ? 'active' : '' }}" 
           href="{{ path('etudiant_questionnaire_liste') }}">
            <i class="fas fa-clipboard-list me-2"></i> Questionnaires
        </a>
        
        <a class="nav-link {{ app.request.attributes.get('_route') starts with 'etudiant_mes_reponses' ? 'active' : '' }}" 
           href="{{ path('etudiant_mes_reponses') }}">
            <i class="fas fa-chart-line me-2"></i> Mes Réponses
        </a>
        
        <a class="nav-link {{ app.request.attributes.get('_route') == 'etudiant_profil' ? 'active' : '' }}" 
           href="{{ path('etudiant_profil') }}">
            <i class="fas fa-user me-2"></i> Mon Profil
        </a>
        
        <div class="mt-5">
            <a href="{{ path('admin_dashboard') }}" class="nav-link text-warning">
                <i class="fas fa-exchange-alt me-2"></i> Vue Admin
            </a>
            
            <a href="/" class="nav-link">
                <i class="fas fa-home me-2"></i> Accueil
            </a>
        </div>
    </nav>
</div>
{% endblock %}