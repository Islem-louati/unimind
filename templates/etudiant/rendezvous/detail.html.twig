{# templates/etudiant/rendezvous/detail.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détail Rendez-vous | UniMind{% endblock %}

{% block body_class %}g-sidenav-show bg-gray-100{% endblock %}

{% block body %}
  <div class="min-height-300 bg-dark position-absolute w-100"></div>
  
  {# Sidebar pour Étudiant #}
  <aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4" id="sidenav-main">
    <div class="sidenav-header">
      <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand m-0" href="{{ path('app_dashboard_etudiant') }}">
        <img src="{{ asset('assets/img/logo-ct-dark.png') }}" width="26px" height="26px" class="navbar-brand-img h-100" alt="main_logo">
        <span class="ms-1 font-weight-bold">UniMind</span>
      </a>
    </div>
    <hr class="horizontal dark mt-0">
    <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_dashboard_etudiant') }}">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-tv-2 text-dark text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_etudiant_rdv') }}">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-calendar-grid-58 text-dark text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Mes Rendez-vous</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_etudiant_consultations') }}">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-folder-17 text-dark text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Consultations</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_etudiant_traitements') }}">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-bag-17 text-dark text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Traitements</span>
          </a>
        </li>
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs font-weight-bolder opacity-6">Mon Compte</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_etudiant_profil') }}">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-single-02 text-dark text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Mon Profil</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_logout') }}">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-button-power text-dark text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Déconnexion</span>
          </a>
        </li>
      </ul>
    </div>
  </aside>
  
  <main class="main-content position-relative border-radius-lg">
    {# Navbar #}
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="{{ path('app_dashboard_etudiant') }}">Étudiant</a></li>
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="{{ path('app_etudiant_rdv') }}">Mes Rendez-vous</a></li>
            <li class="breadcrumb-item text-sm text-white active" aria-current="page">Détail</li>
          </ol>
          <h6 class="font-weight-bolder text-white mb-0">Détail du rendez-vous</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center">
            <div class="input-group">
              <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
              <input type="text" class="form-control" placeholder="Rechercher...">
            </div>
          </div>
          <ul class="navbar-nav justify-content-end">
            <li class="nav-item d-flex align-items-center">
              <a href="#" class="nav-link text-white font-weight-bold px-0">
                <i class="fa fa-user me-sm-1"></i>
                <span class="d-sm-inline d-none">{{ user.fullName }}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-lg-8">
          <div class="card">
            <div class="card-header pb-0">
              <div class="d-flex justify-content-between align-items-center">
                <h6>Rendez-vous #{{ rendez_vous.rendezVousId }}</h6>
                <div>
                  {% if rendez_vous.isDemande() %}
                    <span class="badge badge-sm bg-gradient-warning">
                      <i class="fas fa-clock me-1"></i>Demande
                    </span>
                  {% elseif rendez_vous.isConfirme() %}
                    <span class="badge badge-sm bg-gradient-success">
                      <i class="fas fa-check-circle me-1"></i>Confirmé
                    </span>
                  {% elseif rendez_vous.isEnCours() %}
                    <span class="badge badge-sm bg-gradient-info">
                      <i class="fas fa-play-circle me-1"></i>En cours
                    </span>
                  {% elseif rendez_vous.isTermine() %}
                    <span class="badge badge-sm bg-gradient-secondary">
                      <i class="fas fa-check-circle me-1"></i>Terminé
                    </span>
                  {% elseif rendez_vous.isAnnule() %}
                    <span class="badge badge-sm bg-gradient-danger">
                      <i class="fas fa-times-circle me-1"></i>Annulé
                    </span>
                  {% else %}
                    <span class="badge badge-sm bg-gradient-dark">
                      <i class="fas fa-user-slash me-1"></i>Absent
                    </span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="card-body">
              {# Informations du rendez-vous #}
              <div class="row mb-4">
                <div class="col-md-6">
                  <div class="card card-background card-background-mask-info">
                    <div class="card-body">
                      <h6 class="mb-0 text-white">
                        <i class="fas fa-calendar-alt me-2"></i>Date et heure
                      </h6>
                      <p class="text-white text-sm mt-2 mb-0">
                        <strong>{{ rendez_vous.getDateRendezVous()|date('l d F Y') }}</strong><br>
                        De {{ rendez_vous.getHeureDebut()|date('H:i') }} à {{ rendez_vous.getHeureFin()|date('H:i') }}
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card card-background card-background-mask-success">
                    <div class="card-body">
                      <h6 class="mb-0 text-white">
                        <i class="fas fa-user-md me-2"></i>Type de consultation
                      </h6>
                      <p class="text-white text-sm mt-2 mb-0">
                        {% if rendez_vous.getTypeConsultation() == 'présentiel' %}
                          <strong>Présentiel</strong><br>
                          {{ rendez_vous.getLieu() ?? 'Bureau du psychologue' }}
                        {% else %}
                          <strong>En ligne</strong><br>
                          Consultation par vidéoconférence
                        {% endif %}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              
              {# Informations du psychologue #}
              <div class="card mb-4">
                <div class="card-header">
                  <h6 class="mb-0">
                    <i class="fas fa-user-md me-2"></i>Informations du psychologue
                  </h6>
                </div>
                <div class="card-body">
                  <div class="d-flex align-items-center">
                    <div class="me-3">
                      <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle">
                        <i class="ni ni-single-02 text-white text-lg opacity-10"></i>
                      </div>
                    </div>
                    <div>
                      <h5 class="mb-1">Dr. {{ rendez_vous.psy.nom }} {{ rendez_vous.psy.prenom }}</h5>
                      <p class="text-sm mb-0">
                        <i class="fas fa-graduation-cap me-1"></i>
                        {{ rendez_vous.psy.specialite ?? 'Psychologue' }}
                      </p>
                      {% if rendez_vous.psy.email %}
                        <p class="text-sm mb-0">
                          <i class="fas fa-envelope me-1"></i>
                          {{ rendez_vous.psy.email }}
                        </p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              
              {# Motif de consultation #}
              {% if rendez_vous.motif %}
                <div class="card mb-4">
                  <div class="card-header">
                    <h6 class="mb-0">
                      <i class="fas fa-sticky-note me-2"></i>Motif de consultation
                    </h6>
                  </div>
                  <div class="card-body">
                    <p class="text-sm">{{ rendez_vous.motif }}</p>
                  </div>
                </div>
              {% endif %}
              
              {# Informations de suivi #}
              <div class="card">
                <div class="card-header">
                  <h6 class="mb-0">
                    <i class="fas fa-history me-2"></i>Historique
                  </h6>
                </div>
                <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0 py-2">
                      <div class="d-flex">
                        <div class="icon icon-shape icon-sm bg-gradient-success shadow text-center rounded-circle me-3">
                          <i class="ni ni-check-bold text-white text-sm opacity-10"></i>
                        </div>
                        <div class="d-flex flex-column">
                          <h6 class="mb-1 text-sm">Rendez-vous créé</h6>
                          <span class="text-xs">{{ rendez_vous.createdAt|date('d/m/Y à H:i') }}</span>
                        </div>
                      </div>
                    </li>
                    {% if rendez_vous.updatedAt %}
                      <li class="list-group-item px-0 py-2">
                        <div class="d-flex">
                          <div class="icon icon-shape icon-sm bg-gradient-info shadow text-center rounded-circle me-3">
                            <i class="ni ni-settings text-white text-sm opacity-10"></i>
                          </div>
                          <div class="d-flex flex-column">
                            <h6 class="mb-1 text-sm">Dernière mise à jour</h6>
                            <span class="text-xs">{{ rendez_vous.updatedAt|date('d/m/Y à H:i') }}</span>
                          </div>
                        </div>
                      </li>
                    {% endif %}
                  </ul>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <a href="{{ path('app_etudiant_rdv') }}" class="btn btn-secondary">
                  <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
                
                {% if rendez_vous.canBeCancelled() %}
                  <form method="post" 
                        action="{{ path('app_etudiant_rdv_annuler', {id: rendez_vous.rendezVousId}) }}" 
                        onsubmit="return confirm('Êtes-vous sûr de vouloir annuler ce rendez-vous ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('annuler' ~ rendez_vous.rendezVousId) }}">
                    <button type="submit" class="btn btn-danger">
                      <i class="fas fa-times me-2"></i>Annuler le rendez-vous
                    </button>
                  </form>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        
        {# Colonne de droite : Actions et informations #}
        <div class="col-lg-4">
          <div class="card">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Instructions
              </h6>
            </div>
            <div class="card-body">
              {% if rendez_vous.getTypeConsultation() == 'présentiel' %}
                <div class="alert alert-info">
                  <h6 class="text-white">
                    <i class="fas fa-map-marker-alt me-2"></i>Présentiel
                  </h6>
                  <p class="text-sm text-white mb-0">
                    Rendez-vous au bureau du psychologue 10 minutes avant l'heure prévue.
                  </p>
                </div>
              {% else %}
                <div class="alert alert-success">
                  <h6 class="text-white">
                    <i class="fas fa-video me-2"></i>En ligne
                  </h6>
                  <p class="text-sm text-white mb-0">
                    Un lien de vidéoconférence vous sera envoyé avant le rendez-vous.
                  </p>
                </div>
              {% endif %}
              
              {% if rendez_vous.isDemande() %}
                <div class="alert alert-warning">
                  <h6 class="text-white">
                    <i class="fas fa-clock me-2"></i>En attente de confirmation
                  </h6>
                  <p class="text-sm text-white mb-0">
                    Le psychologue doit confirmer votre rendez-vous. Vous recevrez une notification.
                  </p>
                </div>
              {% elseif rendez_vous.isConfirme() %}
                <div class="alert alert-success">
                  <h6 class="text-white">
                    <i class="fas fa-check-circle me-2"></i>Confirmé
                  </h6>
                  <p class="text-sm text-white mb-0">
                    Votre rendez-vous est confirmé. Préparez-vous pour la consultation.
                  </p>
                </div>
              {% endif %}
              
              <div class="mt-3">
                <h6 class="text-sm font-weight-bold">À retenir :</h6>
                <ul class="text-sm">
                  <li>Présentez-vous à l'heure</li>
                  <li>Ayez vos documents si nécessaire</li>
                  <li>Préparez vos questions</li>
                  <li>Annulation possible jusqu'à 24h avant</li>
                </ul>
              </div>
            </div>
          </div>
          
          <div class="card mt-4">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="fas fa-headset me-2"></i>Support
              </h6>
            </div>
            <div class="card-body">
              <p class="text-sm mb-3">
                <i class="fas fa-question-circle me-2 text-info"></i>
                Besoin d'aide ou de modifier votre rendez-vous ?
              </p>
              <a href="#" class="btn btn-sm btn-outline-info w-100">
                <i class="fas fa-envelope me-2"></i>Contacter le support
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <footer class="footer pt-3">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6 mb-lg-0 mb-4">
              <div class="copyright text-center text-sm text-muted text-lg-start">
                © {{ "now"|date("Y") }} UniMind - Nom Étudiant: #{{ user.nom }}
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </main>
{% endblock %}