{% block javascripts %}
{{ parent() }}

<script>
document.addEventListener('DOMContentLoaded', function() {
    // ============================================
    // ÉLÉMENTS DU DOM
    // ============================================
    const modalView = document.getElementById('modalViewConsultation');
    const modalEdit = document.getElementById('modalEditConsultation');
    const viewButtons = document.querySelectorAll('.view-consultation-btn');
    const editButtons = document.querySelectorAll('.edit-consultation-btn');
    const editForm = document.getElementById('editConsultationForm');
    const avisPsyTextarea = document.getElementById('avis_psy');
    const clearRatingBtn = document.getElementById('clearRating');
    const noteDisplay = document.getElementById('noteDisplay');
    const starIcons = document.querySelectorAll('.star-icon');
    const starRadios = document.querySelectorAll('.star-radio');
    
    // ============================================
    // GESTION DES ÉTOILES
    // ============================================
    
    function updateStarsDisplay() {
        const checkedRadio = document.querySelector('.star-radio:checked');
        const rating = checkedRadio ? parseInt(checkedRadio.value) : 0;
        
        noteDisplay.textContent = rating > 0 ? rating : '-';
        
        starRadios.forEach((radio) => {
            const value = parseInt(radio.value);
            const label = radio.nextElementSibling;
            
            if (value <= rating) {
                label.style.color = '#ffc107';
                label.style.fontWeight = '900';
            } else {
                label.style.color = '#ddd';
                label.style.fontWeight = 'normal';
            }
        });
    }
    
    starIcons.forEach((icon) => {
        icon.addEventListener('click', function() {
            const radio = this.previousElementSibling;
            radio.checked = true;
            updateStarsDisplay();
        });
    });
    
    clearRatingBtn.addEventListener('click', function() {
        starRadios.forEach(radio => radio.checked = false);
        updateStarsDisplay();
    });
    
    starIcons.forEach((icon) => {
        icon.addEventListener('mouseenter', function() {
            const radio = this.previousElementSibling;
            const value = parseInt(radio.value);
            
            starRadios.forEach((r) => {
                const v = parseInt(r.value);
                const label = r.nextElementSibling;
                
                if (v <= value) {
                    label.style.color = '#ffc107';
                } else {
                    label.style.color = '#ddd';
                }
            });
        });
    });
    
    document.getElementById('starsContainer').addEventListener('mouseleave', function() {
        updateStarsDisplay();
    });
    
    // ============================================
    // BOUTON VISUALISATION
    // ============================================
    
    viewButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const consultationId = this.getAttribute('data-id');
            const originalHTML = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            this.disabled = true;
            
            try {
                const response = await fetch(`/psychologue/consultations/${consultationId}/data`);
                const result = await response.json();
                
                if (result.success) {
                    const data = result.data;
                    
                    document.getElementById('viewPatientName').textContent = data.etudiant_nom;
                    document.getElementById('viewRdvDate').textContent = data.date_rdv;
                    document.getElementById('viewConsultationDate').textContent = data.date_redaction;
                    
                    const ratingDisplay = document.getElementById('viewRatingDisplay');
                    if (data.note_satisfaction) {
                        let starsHTML = '<div class="note-stars" style="font-size: 1.5rem;">';
                        for (let i = 1; i <= 5; i++) {
                            if (i <= data.note_satisfaction) {
                                starsHTML += '<i class="fas fa-star"></i> ';
                            } else {
                                starsHTML += '<i class="far fa-star"></i> ';
                            }
                        }
                        starsHTML += '</div>';
                        starsHTML += `<span class="badge badge-note mt-2">${data.note_satisfaction}/5</span>`;
                        ratingDisplay.innerHTML = starsHTML;
                    } else {
                        ratingDisplay.innerHTML = '<span class="badge bg-gradient-warning">Non notée</span>';
                    }
                    
                    const avisPsyDiv = document.getElementById('viewAvisPsy');
                    avisPsyDiv.textContent = data.avis_psy || 'Aucun avis rédigé';
                    
                    const modalInstance = new bootstrap.Modal(modalView);
                    modalInstance.show();
                    
                } else {
                    alert('Erreur: ' + (result.error || 'Impossible de charger les données'));
                }
                
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors du chargement: ' + error.message);
            } finally {
                this.innerHTML = originalHTML;
                this.disabled = false;
            }
        });
    });
    
    // ============================================
    // BOUTON MODIFICATION
    // ============================================
    
    editButtons.forEach(button => {
        button.addEventListener('click', async function() {
            const consultationId = this.getAttribute('data-id');
            const originalHTML = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            this.disabled = true;
            
            try {
                const response = await fetch(`/psychologue/consultations/${consultationId}/data`);
                const result = await response.json();
                
                if (result.success) {
                    const data = result.data;
                    
                    document.getElementById('modalPatientName').textContent = data.etudiant_nom;
                    document.getElementById('modalRdvDate').textContent = data.date_rdv;
                    document.getElementById('modalConsultationDate').textContent = data.date_redaction;
                    avisPsyTextarea.value = data.avis_psy || '';
                    
                    editForm.action = `/psychologue/consultations/${consultationId}/edit`;
                    
                    starRadios.forEach(radio => radio.checked = false);
                    if (data.note_satisfaction) {
                        const starToCheck = document.getElementById(`star${data.note_satisfaction}`);
                        if (starToCheck) {
                            starToCheck.checked = true;
                        }
                    }
                    updateStarsDisplay();
                    
                    const modalInstance = new bootstrap.Modal(modalEdit);
                    modalInstance.show();
                    
                } else {
                    alert('Erreur: ' + (result.error || 'Impossible de charger les données'));
                }
                
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors du chargement: ' + error.message);
            } finally {
                this.innerHTML = originalHTML;
                this.disabled = false;
            }
        });
    });
    
    // Réinitialiser à la fermeture
    modalEdit.addEventListener('hidden.bs.modal', function() {
        editForm.reset();
        starRadios.forEach(radio => radio.checked = false);
        updateStarsDisplay();
    });
    
    // Log avant soumission
    editForm.addEventListener('submit', function(e) {
        console.log('Formulaire soumis');
        const formData = new FormData(this);
        for (let [key, value] of formData.entries()) {
            console.log(key, ':', value);
        }
    });
});
</script>
{% endblock %}
