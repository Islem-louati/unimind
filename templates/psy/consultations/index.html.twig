      </ul>
    </div>
  </aside>
  
  <main class="main-content position-relative border-radius-lg">
    {# Navbar #}
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="{{ path('app_dashboard_psy') }}">Psychologue</a></li>
            <li class="breadcrumb-item text-sm text-white active" aria-current="page">Consultations</li>
          </ol>
          <h6 class="font-weight-bolder text-white mb-0">Gestion des Consultations</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center">
            <div class="input-group">
              <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
              <input type="text" class="form-control" placeholder="Rechercher...">
            </div>
          </div>
          <ul class="navbar-nav justify-content-end">
            <li class="nav-item d-flex align-items-center">
              <a href="#" class="nav-link text-white font-weight-bold px-0">
                <i class="fa fa-user me-sm-1"></i>
                <span class="d-sm-inline d-none">Dr. {{ user.nom }}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="container-fluid py-4">
      {# Messages Flash #}
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
            <span class="alert-text text-white">{{ message }}</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {% endfor %}
      {% endfor %}
      
      {# Statistiques #}
      <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Total</p>
                    <h5 class="font-weight-bolder mb-0">{{ total_consultations }}</h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-single-copy-04 text-lg opacity-10"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Avec notes</p>
                    <h5 class="font-weight-bolder mb-0">{{ consultations_avec_notes }}</h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                    <i class="ni ni-favourite-28 text-lg opacity-10"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Sans notes</p>
                    <h5 class="font-weight-bolder mb-0">{{ consultations_sans_notes }}</h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                    <i class="ni ni-paper-diploma text-lg opacity-10"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Moyenne</p>
                    <h5 class="font-weight-bolder mb-0">{{ moyenne_note }}/5</h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                    <i class="ni ni-chart-bar-32 text-lg opacity-10"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      {# Liste des consultations #}
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header pb-0">
              <h6>Historique des Consultations ({{ total_consultations }})</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              {% if consultations is empty %}
                <div class="text-center py-4">
                  <i class="ni ni-single-copy-04 text-secondary" style="font-size: 3rem;"></i>
                  <p class="text-sm text-secondary mb-0 mt-3">Aucune consultation enregistrée</p>
                </div>
              {% else %}
                <div class="table-responsive p-0">
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Patient</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date RDV</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date Consultation</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Note</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Avis</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for consultation in consultations %}
                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <div class="icon icon-shape bg-gradient-dark shadow-dark text-center rounded-circle">
                                  <i class="ni ni-single-02 text-white text-sm opacity-10"></i>
                                </div>
                              </div>
                              <div class="d-flex flex-column justify-content-center ms-3">
                                <h6 class="mb-0 text-sm">{{ consultation.etudiant.prenom }} {{ consultation.etudiant.nom }}</h6>
                                <p class="text-xs text-secondary mb-0">{{ consultation.etudiant.email }}</p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">
                              {% if consultation.rendezVous.disponibilite %}
                                {{ consultation.rendezVous.disponibilite.dateDispo|date('d/m/Y') }}
                              {% else %}
                                N/A
                              {% endif %}
                            </p>
                            <small class="text-xs text-muted">RDV #{{ consultation.rendezVous.rendezVousId }}</small>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">{{ consultation.dateRedaction|date('d/m/Y') }}</p>
                            <small class="text-xs text-muted">
                              {{ consultation.dateRedaction|date('H:i') }}
                              {% if consultation.dateModification %}
                                <br><span class="text-info">(modifiée)</span>
                              {% endif %}
                            </small>
                          </td>
                          <td class="align-middle text-center">
                            {% if consultation.noteSatisfaction %}
                              <div class="note-stars">
                                {% for i in 1..5 %}
                                  {% if i <= consultation.noteSatisfaction %}
                                    <i class="fas fa-star"></i>
                                  {% else %}
                                    <i class="far fa-star"></i>
                                  {% endif %}
                                {% endfor %}
                              </div>
                              <span class="badge badge-note badge-sm">{{ consultation.noteSatisfaction }}/5</span>
                            {% else %}
                              <span class="badge badge-sm bg-gradient-warning">
                                <i class="fas fa-edit me-1"></i>À noter
                              </span>
                            {% endif %}
                          </td>
                          <td class="align-middle">
                            <p class="text-xs text-dark mb-0">
                              {% if consultation.avisPsy %}
                                {{ consultation.avisPsy|length > 50 ? consultation.avisPsy|slice(0, 50) ~ '...' : consultation.avisPsy }}
                              {% else %}
                                <span class="text-muted"><i>Aucun avis</i></span>
                              {% endif %}
                            </p>
                          </td>
                          <td class="align-middle text-center">
                            <div class="btn-action-group">
                              <button type="button" 
                                      class="btn btn-outline-primary btn-sm view-consultation-btn"
                                      data-id="{{ consultation.consultationId }}"
                                      data-bs-toggle="tooltip" 
                                      title="Voir">
                                <i class="fas fa-eye"></i>
                              </button>
                              <button type="button" 
                                      class="btn btn-outline-info btn-sm edit-consultation-btn"
                                      data-id="{{ consultation.consultationId }}"
                                      data-bs-toggle="tooltip" 
                                      title="Modifier">
                                <i class="fas fa-edit"></i>
                              </button>
                            </div>
                          </td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      
      {# ========================================== #}
      {# MODAL VISUALISATION CONSULTATION #}
      {# ========================================== #}
      <div class="modal fade" id="modalViewConsultation" tabindex="-1">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
              <h5 class="modal-title text-white">
                <i class="fas fa-eye me-2"></i>Détails de la consultation
              </h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="alert alert-info">
                <div class="row">
                  <div class="col-md-6">
                    <strong><i class="fas fa-user me-1"></i>Patient:</strong> <span id="viewPatientName"></span>
                  </div>
                  <div class="col-md-3">
                    <strong><i class="fas fa-calendar me-1"></i>RDV:</strong> <span id="viewRdvDate"></span>
                  </div>
                  <div class="col-md-3">
                    <strong><i class="fas fa-clock me-1"></i>Créée:</strong> <span id="viewConsultationDate"></span>
                  </div>
                </div>
              </div>
              
              <div class="mb-4">
                <label class="form-label fw-bold">
                  <i class="fas fa-star text-warning me-2"></i>
                  Note de satisfaction
                </label>
                <div id="viewRatingDisplay" class="mt-2"></div>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">
                  <i class="fas fa-comment-medical me-2 text-primary"></i>
                  Avis du psychologue
                </label>
                <div id="viewAvisPsy" class="p-3 bg-light rounded" style="min-height: 100px; white-space: pre-wrap;"></div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times me-1"></i>Fermer
              </button>
            </div>
          </div>
        </div>
      </div>
      
      {# ========================================== #}
      {# MODAL MODIFICATION CONSULTATION #}
      {# ========================================== #}
      <div class="modal fade" id="modalEditConsultation" tabindex="-1">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form id="editConsultationForm" method="POST">
              <div class="modal-header bg-gradient-primary">
                <h5 class="modal-title text-white">
                  <i class="fas fa-edit me-2"></i>Modifier la consultation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                
                {# Informations consultation #}
                <div class="alert alert-info">
                  <div class="row">
                    <div class="col-md-6">
                      <strong><i class="fas fa-user me-1"></i>Patient:</strong> <span id="modalPatientName"></span>
                    </div>
                    <div class="col-md-3">
                      <strong><i class="fas fa-calendar me-1"></i>RDV:</strong> <span id="modalRdvDate"></span>
                    </div>
                    <div class="col-md-3">
                      <strong><i class="fas fa-clock me-1"></i>Créée:</strong> <span id="modalConsultationDate"></span>
                    </div>
                  </div>
                </div>
                
                {# Avis du psychologue #}
                <div class="mb-4">
                  <label for="avis_psy" class="form-label fw-bold">
                    <i class="fas fa-comment-medical me-2 text-primary"></i>
                    Avis du psychologue
                  </label>
                  <textarea class="form-control" 
                            id="avis_psy" 
                            name="avis_psy" 
                            rows="5" 
                            placeholder="Rédigez votre avis..."></textarea>
                  <small class="text-muted">
                    <i class="fas fa-lock me-1"></i>Confidentiel - visible uniquement par vous
                  </small>
                </div>
                
                {# SYSTÈME D'ÉTOILES #}
                <div class="rating-container">
                  <label class="form-label fw-bold text-center d-block mb-3">
                    <i class="fas fa-star me-2 text-warning"></i>
                    Note de satisfaction
                  </label>
                  
                  <div class="stars-wrapper">
                    <div class="stars-rating" id="starsContainer">
                      <div class="star-item">
                        <input type="radio" name="note_satisfaction" value="5" id="star5" class="star-radio">
                        <label for="star5" class="star-icon">
                          <i class="fas fa-star"></i>
                        </label>
                      </div>
                      <div class="star-item">
                        <input type="radio" name="note_satisfaction" value="4" id="star4" class="star-radio">
                        <label for="star4" class="star-icon">
                          <i class="fas fa-star"></i>
                        </label>
                      </div>
                      <div class="star-item">
                        <input type="radio" name="note_satisfaction" value="3" id="star3" class="star-radio">
                        <label for="star3" class="star-icon">
                          <i class="fas fa-star"></i>
                        </label>
                      </div>
                      <div class="star-item">
                        <input type="radio" name="note_satisfaction" value="2" id="star2" class="star-radio">
                        <label for="star2" class="star-icon">
                          <i class="fas fa-star"></i>
                        </label>
                      </div>
                      <div class="star-item">
                        <input type="radio" name="note_satisfaction" value="1" id="star1" class="star-radio">
                        <label for="star1" class="star-icon">
                          <i class="fas fa-star"></i>
                        </label>
                      </div>
                    </div>
                    
