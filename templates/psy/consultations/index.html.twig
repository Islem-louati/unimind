{# templates/psy/consultations/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Consultations | UniMind - Psychologue{% endblock %}

{% block body_class %}g-sidenav-show bg-gray-100{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* Styles identiques au template disponibilités */
    .modal-backdrop {
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    .form-control.is-invalid {
      border-color: #f5365c;
      padding-right: calc(1.5em + 0.75rem);
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23f5365c'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23f5365c' stroke='none'/%3e%3c/svg%3e");
      background-repeat: no-repeat;
      background-position: right calc(0.375em + 0.1875rem) center;
      background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
    
    .form-control.is-valid {
      border-color: #2dce89;
      padding-right: calc(1.5em + 0.75rem);
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%232dce89' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
      background-repeat: no-repeat;
      background-position: right calc(0.375em + 0.1875rem) center;
      background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
    
    .invalid-feedback {
      display: none;
      width: 100%;
      margin-top: 0.25rem;
      font-size: 0.875em;
      color: #f5365c;
    }
    
    .is-invalid ~ .invalid-feedback {
      display: block;
    }
    
    /* Boutons d'action - style du template disponibilités */
    .btn-action-group {
      display: flex;
      gap: 5px;
      justify-content: center;
    }
    
    .btn-action-group .btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
    }
    
    /* ============================================ */
    /* SYSTÈME D'ÉTOILES POUR LA MODAL */
    /* ============================================ */
    .rating-container {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
      margin: 15px 0;
    }
    
    .stars-wrapper {
      display: flex;
      align-items: center;
      gap: 20px;
      justify-content: center;
    }
    
    .stars-rating {
      display: flex;
      gap: 10px;
      font-size: 0;
    }
    
    .star-item {
      display: inline-block;
      position: relative;
    }
    
    .star-radio {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }
    
    .star-icon {
      cursor: pointer;
      font-size: 3rem;
      color: #ddd;
      transition: all 0.2s ease;
      display: inline-block;
    }
    
    .star-icon:hover {
      transform: scale(1.3);
      color: #ffc107;
    }
    
    .star-radio:checked + .star-icon {
      color: #ffc107;
      font-weight: 900;
    }
    
    .star-item:has(~ .star-item .star-radio:checked) .star-icon {
      color: #ffc107;
      font-weight: 900;
    }
    
    .rating-display {
      font-size: 1.5rem;
      font-weight: bold;
      color: #495057;
      min-width: 100px;
      text-align: center;
    }
    
    .rating-display .note-value {
      color: #ffc107;
      font-size: 2rem;
    }
    
    /* Affichage des étoiles dans le tableau */
    .note-stars {
      color: #ffc107;
      font-size: 1.2rem;
    }
    
    .badge-note {
      background: linear-gradient(310deg, #fb6340 0%, #fbb140 100%);
      color: white;
      font-weight: 600;
    }
  </style>
{% endblock %}

