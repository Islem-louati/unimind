{% extends 'base.html.twig' %}

{% block title %}Analyse IA du Suivi{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-brain me-2"></i>
                        Analyse IA du Suivi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Informations du suivi</h6>
                            <p><strong>Date:</strong> {{ suivi.dateSuivi|date('d/m/Y') }}</p>
                            <p><strong>Traitement:</strong> {{ suivi.traitement.titre }}</p>
                            <p><strong>Patient:</strong> {{ suivi.traitement.etudiant ? suivi.traitement.etudiant.fullName : 'Non assigné' }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Observations à analyser</h6>
                            <div class="alert alert-light">
                                {{ suivi.observations ?: suivi.observationsPsy ?: 'Aucune observation disponible' }}
                            </div>
                        </div>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            {{ error }}
                        </div>
                    {% endif %}

                    {% if analysis %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-robot me-2"></i>
                                            Résultats de l'analyse
                                        </h6>
                                        
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h6>Mots-clés détectés</h6>
                                                <div class="d-flex flex-wrap gap-2">
                                                    {% for keyword in analysis.keywords %}
                                                        <span class="badge bg-primary">{{ keyword }}</span>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <h6>Émotion dominante</h6>
                                                <span class="badge bg-info">{{ analysis.emotion }}</span>
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <h6>Recommandation</h6>
                                                <p class="text-muted">{{ analysis.recommendation }}</p>
                                            </div>
                                        </div>

                                        {% if analysis.full_response %}
                                            <hr>
                                            <h6>Analyse complète</h6>
                                            <div class="alert alert-info">
                                                {{ analysis.full_response }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="mt-4">
                        {% if not analysis %}
                            <form method="POST">
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-brain me-2"></i>
                                    Lancer l'analyse IA
                                </button>
                            </form>
                        {% endif %}
                        
                        <a href="{{ path('app_suivi_traitement_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Retour aux suivis
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
