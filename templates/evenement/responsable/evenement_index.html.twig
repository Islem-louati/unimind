{% extends 'layout_espace_responsable.html.twig' %}

{% block title %}Événements | Back Office | UniMind{% endblock %}
{% block breadcrumb_page %}Événements{% endblock %}
{% block breadcrumb_title %}Liste des événements{% endblock %}

{% block content_back %}
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center flex-wrap gap-2">
          <h5>Événements</h5>
          <a href="{{ path('app_back_evenement_new') }}" class="btn btn-primary btn-sm">Nouvel événement</a>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <form method="get" action="{{ path('app_back_evenement_index') }}" class="p-4 pb-0 d-flex gap-2 flex-wrap align-items-end">
            <input type="hidden" name="sort" value="{{ sort }}">
            <input type="hidden" name="order" value="{{ order }}">
            <div class="flex-grow-1" style="min-width: 200px;">
              <label for="search_q" class="form-label small mb-0">Rechercher (titre, lieu)</label>
              <input type="text" name="q" id="search_q" class="form-control form-control-sm" value="{{ q }}" placeholder="Mot-clé…">
            </div>
            <button type="submit" class="btn btn-outline-primary btn-sm">Rechercher</button>
            {% if q %}
              <a href="{{ path('app_back_evenement_index') }}" class="btn btn-outline-secondary btn-sm">Effacer</a>
            {% endif %}
          </form>
          {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show mx-4 mt-3" role="alert">
              {{ message }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
          {% endfor %}
          {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show mx-4 mt-3" role="alert">
              {{ message }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
          {% endfor %}
          {% if evenements|length > 0 %}
            <div class="table-responsive p-4">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Image</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path('app_back_evenement_index', { q: q, sort: 'titre', order: sort == 'titre' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Titre {{ sort == 'titre' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path('app_back_evenement_index', { q: q, sort: 'type', order: sort == 'type' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Type {{ sort == 'type' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path('app_back_evenement_index', { q: q, sort: 'dateDebut', order: sort == 'dateDebut' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Début {{ sort == 'dateDebut' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path('app_back_evenement_index', { q: q, sort: 'lieu', order: sort == 'lieu' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Lieu {{ sort == 'lieu' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path('app_back_evenement_index', { q: q, sort: 'capaciteMax', order: sort == 'capaciteMax' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Places {{ sort == 'capaciteMax' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path('app_back_evenement_index', { q: q, sort: 'statut', order: sort == 'statut' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Statut {{ sort == 'statut' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-secondary opacity-7"></th>
                  </tr>
                </thead>
                <tbody>
                  {% for evenement in evenements %}
                    <tr>
                      <td>
                        {% if evenement.image %}
                          <img src="{{ asset('uploads/evenements/' ~ evenement.image) }}" alt="Affiche" class="img-thumbnail" style="max-height: 50px; max-width: 80px;">
                        {% else %}
                          <span class="text-muted text-xs">Aucune</span>
                        {% endif %}
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ evenement.titre }}</p>
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ evenement.getTypeFormate() }}</p>
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ evenement.getDateDebutFormatee() }}</p>
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ evenement.lieu }}</p>
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ evenement.nombreInscrits }} / {{ evenement.capaciteMax }}</p>
                      </td>
                      <td>
                        <span class="badge badge-sm bg-gradient-secondary">{{ evenement.getStatutFormate() }}</span>
                      </td>
                      <td class="align-middle">
                        <a href="{{ path('app_back_evenement_show', { id: evenement.id }) }}" class="btn btn-link text-info px-2 mb-0">Voir</a>
                        <a href="{{ path('app_back_evenement_edit', { id: evenement.id }) }}" class="btn btn-link text-dark px-2 mb-0">Modifier</a>
                        <form method="post" action="{{ path('app_back_evenement_delete', { id: evenement.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cet événement ?');">
                          <input type="hidden" name="_token" value="{{ csrf_token('delete_evenement_' ~ evenement.id) }}">
                          <button type="submit" class="btn btn-link text-danger px-2 mb-0">Supprimer</button>
                        </form>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted p-4">Aucun événement. <a href="{{ path('app_back_evenement_new') }}">Créer un événement</a>.</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
