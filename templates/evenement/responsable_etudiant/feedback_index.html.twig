{% extends 'layout_espace_responsable.html.twig' %}

{% block title %}Feedbacks | Back Office | UniMind{% endblock %}
{% block breadcrumb_page %}Feedbacks{% endblock %}
{% block breadcrumb_title %}Feedbacks des étudiants{% endblock %}

{% block content_back %}
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center flex-wrap gap-2">
          <h5>Feedbacks</h5>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <form method="get" action="{{ path(route_prefix ~ 'feedback_index') }}" class="p-4 pb-0 d-flex gap-2 flex-wrap align-items-end">
            <input type="hidden" name="sort" value="{{ sort }}">
            <input type="hidden" name="order" value="{{ order }}">
            <div class="flex-grow-1" style="min-width: 200px;">
              <label for="search_q" class="form-label small mb-0">Rechercher (événement, étudiant, commentaire)</label>
              <input type="text" name="q" id="search_q" class="form-control form-control-sm" value="{{ q }}" placeholder="Mot-clé…">
            </div>
            <button type="submit" class="btn btn-outline-primary btn-sm">Rechercher</button>
            {% if q %}
              <a href="{{ path(route_prefix ~ 'feedback_index') }}" class="btn btn-outline-secondary btn-sm">Effacer</a>
            {% endif %}
          </form>

          {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show mx-4 mt-3" role="alert">
              {{ message }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
          {% endfor %}
          {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show mx-4 mt-3" role="alert">
              {{ message }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
          {% endfor %}

          {% if feedbacks|length > 0 %}
            <div class="table-responsive p-4">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path(route_prefix ~ 'feedback_index', { q: q, sort: 'evenement_titre', order: sort == 'evenement_titre' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Événement {{ sort == 'evenement_titre' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path(route_prefix ~ 'feedback_index', { q: q, sort: 'etudiant_nom', order: sort == 'etudiant_nom' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Étudiant {{ sort == 'etudiant_nom' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path(route_prefix ~ 'feedback_index', { q: q, sort: 'note_satisfaction', order: sort == 'note_satisfaction' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Note {{ sort == 'note_satisfaction' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                    {% if route_prefix == 'app_admin_' %}
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Organisateur</th>
                    {% endif %}
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Commentaire</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                      <a href="{{ path(route_prefix ~ 'feedback_index', { q: q, sort: 'feedback_at', order: sort == 'feedback_at' and order == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-secondary text-decoration-none">Date {{ sort == 'feedback_at' ? (order == 'ASC' ? '↑' : '↓') : '' }}</a>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  {% for participation in feedbacks %}
                    <tr>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ participation.evenement ? participation.evenement.titre : '–' }}</p>
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ participation.etudiant ? participation.etudiant.fullName : '–' }}</p>
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ participation.noteSatisfaction is not null ? participation.noteSatisfaction : '–' }}</p>
                      </td>
                      {% if route_prefix == 'app_admin_' %}
                        <td>
                          <p class="text-xs mb-0">
                            {% if participation.evenement and participation.evenement.organisateur %}
                              {{ participation.evenement.organisateur.prenom }} {{ participation.evenement.organisateur.nom }} ({{ participation.evenement.organisateur.email }})
                            {% else %}
                              <span class="text-muted">—</span>
                            {% endif %}
                          </p>
                        </td>
                      {% endif %}
                      <td>
                        {% if participation.feedbackCommentaire %}
                          <p class="text-xs mb-0" style="max-width: 420px; white-space: normal; word-break: break-word;">
                            {{ participation.feedbackCommentaire }}
                          </p>
                        {% else %}
                          <span class="text-muted text-xs">—</span>
                        {% endif %}
                      </td>
                      <td>
                        <p class="text-xs mb-0">{{ participation.feedbackAt ? participation.feedbackAt|date('d/m/Y H:i') : '–' }}</p>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted p-4">Aucun feedback pour le moment.</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
