{% extends 'layout_espace_responsable.html.twig' %}

{% block title %}Contributions | Back Office | UniMind{% endblock %}
{% block breadcrumb_page %}Contributions{% endblock %}
{% block breadcrumb_title %}Contributions (Sponsors ↔ Événements){% endblock %}

{% block content_back %}
  <div class="row">
    <div class="col-12">
      {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
          {{ message }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
      {% endfor %}
      {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
          {{ message }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
      {% endfor %}

      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center flex-wrap gap-2">
          <h5>Mes contributions</h5>
          <a href="{{ path(route_prefix ~ 'contribution_new') }}" class="btn btn-primary btn-sm">Nouvelle contribution</a>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          {% if contributions|length > 0 %}
            <div class="table-responsive p-4">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Événement</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Sponsor</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Montant</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                    <th class="text-secondary opacity-7"></th>
                  </tr>
                </thead>
                <tbody>
                  {% for c in contributions %}
                    <tr>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ c.evenement ? c.evenement.titre : '–' }}</p>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{ c.sponsor ? c.sponsor.nomSponsor : '–' }}</p>
                      </td>
                      <td><p class="text-xs mb-0">{{ c.montantContribution }}</p></td>
                      <td><p class="text-xs mb-0">{{ c.getTypeContributionFormate() }}</p></td>
                      <td><span class="badge badge-sm bg-gradient-secondary">{{ c.getStatutFormate() }}</span></td>
                      <td><p class="text-xs mb-0">{{ c.getDateContributionFormatee() }}</p></td>
                      <td class="align-middle">
                        <a href="{{ path(route_prefix ~ 'contribution_edit', { id: c.id }) }}" class="btn btn-link text-dark px-2 mb-0">Modifier</a>
                        <form method="post" action="{{ path(route_prefix ~ 'contribution_delete', { id: c.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette contribution ?');">
                          <input type="hidden" name="_token" value="{{ csrf_token('delete_evenement_sponsor_' ~ c.id) }}">
                          <button type="submit" class="btn btn-link text-danger px-2 mb-0">Supprimer</button>
                        </form>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted p-4">Aucune contribution. <a href="{{ path(route_prefix ~ 'contribution_new') }}">Créer la première</a>.</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
