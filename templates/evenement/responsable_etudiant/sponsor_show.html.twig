{% extends 'layout_espace_responsable.html.twig' %}

{% block title %}{{ sponsor.nomSponsor }} | Back Office | UniMind{% endblock %}
{% block breadcrumb_page %}Sponsors & Contributions{% endblock %}
{% block breadcrumb_title %}Détail du sponsor{% endblock %}

{% block content_back %}
  {% if not show_sponsors %}
    <div class="alert alert-warning" role="alert">Accès non autorisé.</div>
  {% else %}
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
            <div class="d-flex align-items-center gap-3">
              {% if sponsor.logo %}
                <img src="{{ asset('uploads/sponsors/' ~ sponsor.logo) }}" alt="Logo" class="img-thumbnail" style="max-height: 60px; max-width: 90px;">
              {% endif %}
              <div>
                <h5 class="mb-0">{{ sponsor.nomSponsor }}</h5>
                <p class="text-sm text-secondary mb-0">
                  {{ sponsor.typeSponsor ? sponsor.typeSponsor.label() : '' }}
                  {% if sponsor.domaineActivite %}· {{ sponsor.domaineActivite }}{% endif %}
                </p>
              </div>
            </div>
            <div class="d-flex gap-2">
              <a href="{{ path(route_prefix ~ 'sponsor_edit_unified', { id: sponsor.sponsorId }) }}" class="btn btn-outline-primary btn-sm mb-0">Modifier</a>
              <a href="{{ path(route_prefix ~ 'sponsor_index') }}" class="btn btn-outline-secondary btn-sm mb-0">Retour</a>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row">
            <div class="col-12 col-lg-6 mb-3">
              <div class="card card-body border card-plain border-radius-lg">
                <p class="text-xs text-uppercase font-weight-bolder opacity-7 mb-2">Contact</p>
                <p class="text-sm mb-1"><strong>Email :</strong> {{ sponsor.emailContact }}</p>
                <p class="text-sm mb-0"><strong>Téléphone :</strong> {{ sponsor.telephone ?: '–' }}</p>
              </div>
            </div>
            <div class="col-12 col-lg-6 mb-3">
              <div class="card card-body border card-plain border-radius-lg">
                <p class="text-xs text-uppercase font-weight-bolder opacity-7 mb-2">Infos</p>
                <p class="text-sm mb-1"><strong>Site web :</strong>
                  {% if sponsor.siteWeb %}
                    <a href="{{ sponsor.siteWeb }}" target="_blank" rel="noopener noreferrer">{{ sponsor.siteWeb }}</a>
                  {% else %}
                    –
                  {% endif %}
                </p>
                <p class="text-sm mb-0"><strong>Adresse :</strong> {{ sponsor.adresse ?: '–' }}</p>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header pb-0">
                  <h6>Contributions</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                  {% set contributions = sponsor.evenementSponsors|default([]) %}
                  {% if contributions|length > 0 %}
                    <div class="table-responsive p-4">
                      <table class="table align-items-center mb-0">
                        <thead>
                          <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Événement</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Montant</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          {% for c in contributions %}
                            <tr>
                              <td><p class="text-xs font-weight-bold mb-0">{{ c.evenement ? c.evenement.titre : '–' }}</p></td>
                              <td><p class="text-xs mb-0">{{ c.montantContribution }}</p></td>
                              <td><p class="text-xs mb-0">{{ c.getTypeContributionFormate() }}</p></td>
                              <td><span class="badge badge-sm bg-gradient-secondary">{{ c.getStatutFormate() }}</span></td>
                              <td><p class="text-xs mb-0">{{ c.getDateContributionFormatee() }}</p></td>
                            </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  {% else %}
                    <div class="p-4">
                      <p class="text-muted mb-0">Aucune contribution pour ce sponsor.</p>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
{% endblock %}
