{% extends 'base_psychologue.html.twig' %}

{% block page_title %}Gestion des Notifications{% endblock %}
{% block breadcrumb_title %}Gestion des Notifications{% endblock %}

{% block title %}Gestion des Notifications{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-gradient-primary text-white">
                    <h3 class="mb-0">üìß Gestion des Notifications Email</h3>
                    <p class="mb-0">G√©rez l'envoi d'emails pour les traitements</p>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    
                    {% for message in app.flashes('info') %}
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h5 class="card-title">üìä Statistiques</h5>
                                    <p class="card-text">{{ traitements|length }} traitements disponibles</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4 class="mb-4">üéØ Notifications par Traitement</h4>
                    
                    {% if traitements|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Traitement</th>
                                    <th>Patient</th>
                                    <th>Statut</th>
                                    <th>Progression</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for traitement in traitements %}
                                <tr>
                                    <td>
                                        <strong>{{ traitement.titre }}</strong>
                                        <br>
                                        <small class="text-muted">{{ traitement.dateDebut|date('d/m/Y') }}</small>
                                    </td>
                                    <td>{{ traitement.etudiant.fullName }}</td>
                                    <td>
                                        <span class="badge 
                                            {% if traitement.statut == 'en cours' %}bg-success
                                            {% elseif traitement.statut == 'termine' %}bg-primary
                                            {% else %}bg-secondary{% endif %}">
                                            {{ traitement.statutLabel }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-info" style="width: {{ traitement.pourcentageCompletion }}%;">
                                                {{ traitement.pourcentageCompletion|number_format(1) }}%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <form method="post" action="{{ path('app_email_traitement_nouveau', {'id': traitement.id}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-primary" title="Tester notification nouveau traitement">
                                                    üåü Nouveau
                                                </button>
                                            </form>
                                            
                                            <form method="post" action="{{ path('app_email_traitement_rappel_suivi', {'id': traitement.id}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-info" title="Tester rappel de suivi">
                                                    üìÖ Rappel
                                                </button>
                                            </form>
                                            
                                            <form method="post" action="{{ path('app_email_traitement_fin', {'id': traitement.id}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Tester notification fin traitement">
                                                    üéâ Fin
                                                </button>
                                            </form>
                                            
                                            <form method="post" action="{{ path('app_email_traitement_suivi_manquant', {'id': traitement.id}) }}" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Tester notification suivi manquant">
                                                    ‚ö†Ô∏è Manquant
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info">
                        <h4>üì≠ Aucun traitement disponible</h4>
                        <p>Vous n'avez pas encore de traitements pour tester les emails.</p>
                        <a href="{{ path('app_traitement_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Cr√©er un Traitement
                        </a>
                    </div>
                    {% endif %}

                    <hr class="my-5">

                    <h4 class="mb-4">ü§ñ Automatisation</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <h5 class="card-title">üîÑ Envoi Automatique</h5>
                                    <p class="card-text">Envoie automatiquement les emails de rappel pour tous les traitements selon leur statut</p>
                                    <form method="post" action="{{ path('app_email_traitement_test_automatique') }}">
                                        <button type="submit" class="btn btn-warning btn-lg">
                                            <i class="fas fa-robot me-2"></i>
                                            Lancer l'Envoi Automatique
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h5 class="card-title">üìä Rapport Hebdomadaire</h5>
                                    <p class="card-text">Re√ßoit votre rapport d'activit√© automatique de la semaine.</p>
                                    <form method="post" action="{{ path('app_email_traitement_rapport_hebdomadaire') }}">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-chart-line me-2"></i>
                                            Recevoir le Rapport
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-5">

                    <div class="row">
                        <div class="col-12">
                            <div class="card border-secondary">
                                <div class="card-body">
                                    <h5 class="card-title">üìã Types d'Emails Disponibles</h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6>üåü Notification Nouveau Traitement</h6>
                                            <p class="text-muted small">Envoy√© quand un traitement est cr√©√© pour un √©tudiant.</p>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>üìÖ Rappel de Suivi</h6>
                                            <p class="text-muted small">Rappel pour encourager les suivis r√©guliers.</p>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>üéâ Notification Fin Traitement</h6>
                                            <p class="text-muted small">C√©l√©bration quand un traitement est termin√©.</p>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>‚ö†Ô∏è Suivi Manquant</h6>
                                            <p class="text-muted small">Alerte quand aucun suivi n'est fait depuis longtemps.</p>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>üìä Rapport Hebdomadaire</h6>
                                            <p class="text-muted small">R√©sum√© d'activit√© pour les psychologues.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
