{% extends 'base.html.twig' %}

{% block title %}UniMind - Plateforme d'évaluation du bien-être mental{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Hero Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold mb-3">
                UniMind
                <span class="text-primary">.</span>
            </h1>
            <p class="lead mb-4">
                Plateforme d'évaluation du bien-être mental pour les étudiants.
                Évaluez, comprenez et améliorez votre santé mentale.
            </p>
            <div class="d-flex gap-3">
                <a href="{{ path('etudiant_dashboard') }}" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-graduation-cap me-2"></i> Espace Étudiant
                </a>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-primary btn-lg px-4">
                    <i class="fas fa-cogs me-2"></i> Espace Admin
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center">
                        <i class="fas fa-brain text-primary fa-5x mb-4"></i>
                        <h3 class="mb-3">Deux espaces distincts</h3>
                        <p class="text-muted">
                            Accédez directement à l'espace qui vous correspond
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Fonctionnalités principales</h2>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </div>
                    <h4>Espace Étudiant</h4>
                    <ul class="list-unstyled text-start">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Questionnaires d'évaluation</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Suivi des résultats</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Statistiques personnelles</li>
                        <li><i class="fas fa-check text-success me-2"></i> Recommandations</li>
                    </ul>
                    <a href="{{ path('etudiant_dashboard') }}" class="btn btn-outline-primary mt-3">
                        Accéder <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-cogs fa-2x"></i>
                    </div>
                    <h4>Espace Administrateur</h4>
                    <ul class="list-unstyled text-start">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Gestion des questionnaires</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Création de questions</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Statistiques globales</li>
                        <li><i class="fas fa-check text-success me-2"></i> Supervision des réponses</li>
                    </ul>
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-warning mt-3">
                        Accéder <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-chart-bar fa-2x"></i>
                    </div>
                    <h4>Analyse des données</h4>
                    <ul class="list-unstyled text-start">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Tableaux de bord complets</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Graphiques interactifs</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Rapports détaillés</li>
                        <li><i class="fas fa-check text-success me-2"></i> Export des données</li>
                    </ul>
                    <div class="mt-3">
                        <small class="text-muted">Disponible dans les deux espaces</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Direct Access -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3 class="fw-bold mb-3">Accès direct aux espaces</h3>
                            <p class="text-muted mb-4">
                                Pas besoin de connexion. Choisissez simplement l'espace que vous souhaitez explorer.
                            </p>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="d-grid gap-2">
                                <a href="{{ path('etudiant_dashboard') }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-graduation-cap me-2"></i> Étudiant
                                </a>
                                <a href="{{ path('admin_dashboard') }}" class="btn btn-warning btn-lg">
                                    <i class="fas fa-cogs me-2"></i> Administrateur
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h5>UniMind</h5>
                <p class="text-muted">Plateforme d'évaluation du bien-être mental</p>
            </div>
            <div class="col-md-6 text-end">
                <p class="text-muted mb-0">© {{ "now"|date("Y") }} - Démonstration technique</p>
            </div>
        </div>
    </div>
</footer>
{% endblock %}