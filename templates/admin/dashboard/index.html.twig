{# templates/admin/dashboard/index.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard Admin - UniMind{% endblock %}

{% block body %}
<!-- En-tête -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">Tableau de Bord Admin</h1>
        <p class="text-muted mb-0">Gestion des questionnaires et suivi des réponses</p>
    </div>
    <div class="text-end">
        <span class="badge bg-info fs-6">
            <i class="fas fa-user-shield me-1"></i> Mode Administrateur
        </span>
    </div>
</div>

<!-- Cartes de statistiques -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Questionnaires</h6>
                        <h3 class="mb-0 text-primary">{{ questionnaires_count }}</h3>
                    </div>
                    <div class="bg-primary text-white p-3 rounded-circle">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_questionnaire_index') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i> Voir tous
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Questions</h6>
                        <h3 class="mb-0 text-success">{{ questions_count }}</h3>
                    </div>
                    <div class="bg-success text-white p-3 rounded-circle">
                        <i class="fas fa-question-circle fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_question_index') }}" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-eye me-1"></i> Voir toutes
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Réponses</h6>
                        <h3 class="mb-0 text-warning">{{ reponses_count }}</h3>
                    </div>
                    <div class="bg-warning text-white p-3 rounded-circle">
                        <i class="fas fa-chart-bar fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_global_stats') }}" class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-chart-pie me-1"></i> Statistiques
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Taux complet</h6>
                        <h3 class="mb-0 text-info">
                            {% if questionnaires_count > 0 %}
                                {{ ((questionnaires_count - questionnaires_incomplets|length) / questionnaires_count * 100)|round }}%
                            {% else %}
                                0%
                            {% endif %}
                        </h3>
                    </div>
                    <div class="bg-info text-white p-3 rounded-circle">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-{{ questionnaires_incomplets|length == 0 ? 'success' : 'warning' }}">
                        {{ questionnaires_incomplets|length }} incomplet(s)
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cartes Traitements et Suivis -->
<div class="row mb-4">
    <!-- Carte Traitements -->
    <div class="col-md-6 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Traitements</h6>
                        <h3 class="mb-0 text-success">{{ traitements_count }}</h3>
                        <small class="text-muted">
                            {{ stats_traitements.traitements_actifs }} actifs • 
                            {{ stats_traitements.traitements_ce_mois }} ce mois
                        </small>
                    </div>
                    <div class="bg-success text-white p-3 rounded-circle">
                        <i class="fas fa-stethoscope fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_traitement_index') }}" class="btn btn-sm btn-outline-success w-100">
                        <i class="fas fa-list me-1"></i> Voir la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Carte Suivis -->
    <div class="col-md-6 mb-3">
        <div class="card stat-card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Suivis Thérapeutiques</h6>
                        <h3 class="mb-0 text-warning">{{ suivis_count }}</h3>
                        <small class="text-muted">
                            {{ stats_suivis.suivis_valides }} validés • 
                            {{ stats_suivis.suivis_en_attente }} en attente
                        </small>
                    </div>
                    <div class="bg-warning text-white p-3 rounded-circle">
                        <i class="fas fa-calendar-heart fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_suivi_traitement_index') }}" class="btn btn-sm btn-outline-warning w-100">
                        <i class="fas fa-list me-1"></i> Voir la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- NOUVELLE SECTION : Statistiques Méditation -->
<div class="row mt-5">
    <div class="col-12">
        <h3 class="mb-4">
            <i class="fas fa-spa text-primary me-2"></i>
            Gestion des Méditations
        </h3>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Catégories</h6>
                        <h3 class="mb-0 text-primary">{{ meditation.total_categories }}</h3>
                    </div>
                    <div class="bg-primary text-white p-3 rounded-circle">
                        <i class="fas fa-layer-group fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_categorie_meditation_index') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i> Gérer
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Séances totales</h6>
                        <h3 class="mb-0 text-success">{{ meditation.total_seances }}</h3>
                    </div>
                    <div class="bg-success text-white p-3 rounded-circle">
                        <i class="fas fa-music fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Séances actives</h6>
                        <h3 class="mb-0 text-warning">{{ meditation.seances_actives }}</h3>
                        <small class="text-muted">
                            {{ meditation.total_seances > 0 ? (meditation.seances_actives / meditation.total_seances * 100)|round : 0 }}% du total
                        </small>
                    </div>
                    <div class="bg-warning text-white p-3 rounded-circle">
                        <i class="fas fa-play-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Durée totale</h6>
                        <h3 class="mb-0 text-info">{{ meditation.duree_totale_formatee }}</h3>
                    </div>
                    <div class="bg-info text-white p-3 rounded-circle">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Répartition par type et niveau -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie me-2"></i> Répartition par type
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="icon icon-shape bg-gradient-info shadow-info rounded-circle mb-2 mx-auto" style="width: 50px; height: 50px;">
                            <i class="fas fa-music text-white"></i>
                        </div>
                        <h4>{{ meditation.stats_type.audio }}</h4>
                        <p>Audio</p>
                        <span class="badge bg-info">{{ meditation.stats_type.pourcentage_audio }}%</span>
                    </div>
                    <div class="col-6">
                        <div class="icon icon-shape bg-gradient-danger shadow-danger rounded-circle mb-2 mx-auto" style="width: 50px; height: 50px;">
                            <i class="fas fa-video text-white"></i>
                        </div>
                        <h4>{{ meditation.stats_type.video }}</h4>
                        <p>Vidéo</p>
                        <span class="badge bg-danger">{{ meditation.stats_type.pourcentage_video }}%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-signal me-2"></i> Répartition par niveau
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <div class="icon icon-shape bg-gradient-success shadow-success rounded-circle mb-2 mx-auto" style="width: 50px; height: 50px;">
                            <i class="fas fa-seedling text-white"></i>
                        </div>
                        <h5>{{ meditation.stats_niveau.debutant }}</h5>
                        <p class="small">Débutant</p>
                        <span class="badge bg-success">{{ meditation.stats_niveau.pourcentage_debutant }}%</span>
                    </div>
                    <div class="col-4">
                        <div class="icon icon-shape bg-gradient-warning shadow-warning rounded-circle mb-2 mx-auto" style="width: 50px; height: 50px;">
                            <i class="fas fa-tree text-white"></i>
                        </div>
                        <h5>{{ meditation.stats_niveau.intermediaire }}</h5>
                        <p class="small">Intermédiaire</p>
                        <span class="badge bg-warning">{{ meditation.stats_niveau.pourcentage_intermediaire }}%</span>
                    </div>
                    <div class="col-4">
                        <div class="icon icon-shape bg-gradient-danger shadow-danger rounded-circle mb-2 mx-auto" style="width: 50px; height: 50px;">
                            <i class="fas fa-mountain text-white"></i>
                        </div>
                        <h5>{{ meditation.stats_niveau.avance }}</h5>
                        <p class="small">Avancé</p>
                        <span class="badge bg-danger">{{ meditation.stats_niveau.pourcentage_avance }}%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dernières séances -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i> Dernières séances ajoutées
                </h5>
            </div>
            <div class="card-body">
                {% if meditation.dernieres_seances|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm align-items-center">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Catégorie</th>
                                    <th>Type</th>
                                    <th>Niveau</th>
                                    <th>Durée</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for seance in meditation.dernieres_seances %}
                                    <tr>
                                        <td>{{ seance.titre }}</td>
                                        <td>{{ seance.categorie.nom }}</td>
                                        <td><span class="badge bg-{{ seance.typeFichier == 'audio' ? 'info' : 'danger' }}">{{ seance.typeFichier|capitalize }}</span></td>
                                        <td><span class="badge bg-{{ seance.niveau == 'débutant' ? 'success' : (seance.niveau == 'intermédiaire' ? 'warning' : 'danger') }}">{{ seance.niveau|capitalize }}</span></td>
                                        <td>{{ seance.getDureeFormatee() }}</td>
                                        <td>{{ seance.createdAt|date('d/m/Y H:i') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted text-center mb-0">Aucune séance pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Graphiques Méditation -->
<div class="row mt-4">
    <div class="col-lg-6 col-md-6 mb-md-0 mb-4">
        <div class="card">
            <div class="card-header pb-0">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i> Évolution mensuelle des séances
                </h5>
            </div>
            <div class="card-body p-3">
                <canvas id="evolutionMeditationChart" height="200"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="card">
            <div class="card-header pb-0">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie me-2"></i> Top 5 catégories
                </h5>
            </div>
            <div class="card-body p-3">
                <canvas id="topCategoriesMeditationChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Actions rapides -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i> Actions rapides
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('admin_questionnaire_new') }}" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-plus-circle fa-2x mb-2"></i>
                            <h5>Créer un questionnaire</h5>
                            <p class="mb-0 small">Ajouter un nouveau questionnaire d'évaluation</p>
                        </a>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('admin_question_new') }}" class="btn btn-success w-100 py-3">
                            <i class="fas fa-question-circle fa-2x mb-2"></i>
                            <h5>Ajouter des questions</h5>
                            <p class="mb-0 small">Créer de nouvelles questions</p>
                        </a>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('admin_global_stats') }}" class="btn btn-info w-100 py-3">
                            <i class="fas fa-chart-pie fa-2x mb-2"></i>
                            <h5>Voir les statistiques</h5>
                            <p class="mb-0 small">Analyser les résultats</p>
                        </a>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('admin_users') }}" class="btn btn-secondary w-100 py-3">
                            <i class="fas fa-users fa-2x mb-2"></i>
                            <h5>Gérer les utilisateurs</h5>
                            <p class="mb-0 small">Administration des comptes</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Derniers questionnaires et alertes -->
<div class="row">
    <!-- Derniers questionnaires -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i> Derniers questionnaires
                </h5>
            </div>
            <div class="card-body">
                {% if derniers_questionnaires|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>Questions</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for questionnaire in derniers_questionnaires %}
                                    <tr>
                                        <td>{{ questionnaire.questionnaireId }}</td>
                                        <td>
                                            <strong>{{ questionnaire.nom }}</strong>
                                            <br>
                                            <small class="text-muted">{{ questionnaire.code }}</small>
                                        </td>
                                        <td>
                                            {% if questionnaire.type %}
                                                <span class="badge bg-{{ 
                                                    questionnaire.type == 'stress' ? 'danger' : 
                                                    questionnaire.type == 'anxiete' ? 'warning' : 
                                                    'info' 
                                                }}">
                                                    {{ questionnaire.type|upper }}
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary">Non défini</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 10px;">
                                                {% set pourcentage = questionnaire.questions|length / questionnaire.nbreQuestions * 100 %}
                                                <div class="progress-bar bg-{{ pourcentage == 100 ? 'success' : 'warning' }}" 
                                                     style="width: {{ pourcentage }}%">
                                                </div>
                                            </div>
                                            <small>{{ questionnaire.questions|length }}/{{ questionnaire.nbreQuestions }}</small>
                                        </td>
                                        <td>
                                            {% if questionnaire.questions|length == questionnaire.nbreQuestions %}
                                                <span class="badge bg-success">Complet</span>
                                            {% else %}
                                                <span class="badge bg-warning">Incomplet</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_questionnaire_show', {'id': questionnaire.questionnaireId}) }}" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard-question fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucun questionnaire créé</p>
                        <a href="{{ path('admin_questionnaire_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Créer le premier
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Alertes et notifications -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i> Alertes
                </h5>
            </div>
            <div class="card-body">
                {% if questionnaires_incomplets|length > 0 %}
                    <div class="alert alert-warning">
                        <h6>
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Questionnaires incomplets
                        </h6>
                        <ul class="mb-0">
                            {% for questionnaire in questionnaires_incomplets|slice(0, 3) %}
                                <li>
                                    <a href="{{ path('admin_questionnaire_show', {'id': questionnaire.questionnaireId}) }}">
                                        {{ questionnaire.nom }}
                                    </a>
                                    ({{ questionnaire.questions|length }}/{{ questionnaire.nbreQuestions }})
                                </li>
                            {% endfor %}
                        </ul>
                        {% if questionnaires_incomplets|length > 3 %}
                            <p class="mb-0 mt-2">
                                <small>Et {{ questionnaires_incomplets|length - 3 }} autres...</small>
                            </p>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        Tous les questionnaires sont complets !
                    </div>
                {% endif %}
                
                <div class="alert alert-info">
                    <h6>
                        <i class="fas fa-lightbulb me-2"></i>
                        Conseils
                    </h6>
                    <ul class="mb-0">
                        <li>Vérifiez régulièrement les statistiques</li>
                        <li>Assurez-vous que tous les questionnaires sont complets</li>
                        <li>Testez les questionnaires en mode étudiant</li>
                        <li>Consultez les rapports d'utilisation</li>
                    </ul>
                </div>
                
                <div class="text-center">
                    <a href="{{ path('etudiant_dashboard') }}" class="btn btn-outline-dark">
                        <i class="fas fa-user-graduate me-1"></i> Tester mode étudiant
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Graphique (simplifié) -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i> Vue d'ensemble
                </h5>
            </div>
            <div class="card-body">
                <canvas id="adminChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- NOUVELLE SECTION : Statistiques Événements -->
<div class="row mt-5">
    <div class="col-12">
        <h3 class="mb-4">
            <i class="fas fa-calendar-check text-primary me-2"></i>
            Gestion des Événements
        </h3>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Événements</h6>
                        <h3 class="mb-0 text-primary">{{ evenements.total_evenements }}</h3>
                    </div>
                    <div class="bg-primary text-white p-3 rounded-circle">
                        <i class="fas fa-calendar-alt fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_admin_evenement_index') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i> Gérer
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Sponsors</h6>
                        <h3 class="mb-0 text-success">{{ evenements.total_sponsors }}</h3>
                    </div>
