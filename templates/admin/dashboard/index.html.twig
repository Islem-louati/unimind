{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard Admin - UniMind{% endblock %}

{% block body %}
<!-- En-tête -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">Tableau de Bord Admin</h1>
        <p class="text-muted mb-0">Gestion des questionnaires et suivi des réponses</p>
    </div>
    <div class="text-end">
        <span class="badge bg-info fs-6">
            <i class="fas fa-user-shield me-1"></i> Mode Administrateur
        </span>
    </div>
</div>

<!-- Cartes de statistiques -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Questionnaires</h6>
                        <h3 class="mb-0 text-primary">{{ questionnaires_count }}</h3>
                    </div>
                    <div class="bg-primary text-white p-3 rounded-circle">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_questionnaire_index') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i> Voir tous
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Questions</h6>
                        <h3 class="mb-0 text-success">{{ questions_count }}</h3>
                    </div>
                    <div class="bg-success text-white p-3 rounded-circle">
                        <i class="fas fa-question-circle fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_question_index') }}" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-eye me-1"></i> Voir toutes
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Réponses</h6>
                        <h3 class="mb-0 text-warning">{{ reponses_count }}</h3>
                    </div>
                    <div class="bg-warning text-white p-3 rounded-circle">
                        <i class="fas fa-chart-bar fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('admin_stats') }}" class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-chart-pie me-1"></i> Statistiques
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Taux complet</h6>
                        <h3 class="mb-0 text-info">
                            {% if questionnaires_count > 0 %}
                                {{ ((questionnaires_count - questionnaires_incomplets|length) / questionnaires_count * 100)|round }}%
                            {% else %}
                                0%
                            {% endif %}
                        </h3>
                    </div>
                    <div class="bg-info text-white p-3 rounded-circle">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-{{ questionnaires_incomplets|length == 0 ? 'success' : 'warning' }}">
                        {{ questionnaires_incomplets|length }} incomplet(s)
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Actions rapides -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i> Actions rapides
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="{{ path('admin_questionnaire_new') }}" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-plus-circle fa-2x mb-2"></i>
                            <h5>Créer un questionnaire</h5>
                            <p class="mb-0 small">Ajouter un nouveau questionnaire d'évaluation</p>
                        </a>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <a href="{{ path('admin_question_new') }}" class="btn btn-success w-100 py-3">
                            <i class="fas fa-question-circle fa-2x mb-2"></i>
                            <h5>Ajouter des questions</h5>
                            <p class="mb-0 small">Créer de nouvelles questions</p>
                        </a>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <a href="{{ path('admin_stats') }}" class="btn btn-info w-100 py-3">
                            <i class="fas fa-chart-pie fa-2x mb-2"></i>
                            <h5>Voir les statistiques</h5>
                            <p class="mb-0 small">Analyser les résultats</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Derniers questionnaires et alertes -->
<div class="row">
    <!-- Derniers questionnaires -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i> Derniers questionnaires
                </h5>
            </div>
            <div class="card-body">
                {% if derniers_questionnaires|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>Questions</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for questionnaire in derniers_questionnaires %}
                                    <tr>
                                        <td>{{ questionnaire.questionnaireId }}</td>
                                        <td>
                                            <strong>{{ questionnaire.nom }}</strong>
                                            <br>
                                            <small class="text-muted">{{ questionnaire.code }}</small>
                                        </td>
                                        <td>
                                            {% if questionnaire.type %}
                                                <span class="badge bg-{{ 
                                                    questionnaire.type == 'stress' ? 'danger' : 
                                                    questionnaire.type == 'anxiete' ? 'warning' : 
                                                    'info' 
                                                }}">
                                                    {{ questionnaire.type|upper }}
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary">Non défini</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 10px;">
                                                {% set pourcentage = questionnaire.questions|length / questionnaire.nbreQuestions * 100 %}
                                                <div class="progress-bar bg-{{ pourcentage == 100 ? 'success' : 'warning' }}" 
                                                     style="width: {{ pourcentage }}%">
                                                </div>
                                            </div>
                                            <small>{{ questionnaire.questions|length }}/{{ questionnaire.nbreQuestions }}</small>
                                        </td>
                                        <td>
                                            {% if questionnaire.questions|length == questionnaire.nbreQuestions %}
                                                <span class="badge bg-success">Complet</span>
                                            {% else %}
                                                <span class="badge bg-warning">Incomplet</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_questionnaire_show', {'id': questionnaire.questionnaireId}) }}" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard-question fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucun questionnaire créé</p>
                        <a href="{{ path('admin_questionnaire_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Créer le premier
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Alertes et notifications -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i> Alertes
                </h5>
            </div>
            <div class="card-body">
                {% if questionnaires_incomplets|length > 0 %}
                    <div class="alert alert-warning">
                        <h6>
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Questionnaires incomplets
                        </h6>
                        <ul class="mb-0">
                            {% for questionnaire in questionnaires_incomplets|slice(0, 3) %}
                                <li>
                                    <a href="{{ path('admin_questionnaire_show', {'id': questionnaire.questionnaireId}) }}">
                                        {{ questionnaire.nom }}
                                    </a>
                                    ({{ questionnaire.questions|length }}/{{ questionnaire.nbreQuestions }})
                                </li>
                            {% endfor %}
                        </ul>
                        {% if questionnaires_incomplets|length > 3 %}
                            <p class="mb-0 mt-2">
                                <small>Et {{ questionnaires_incomplets|length - 3 }} autres...</small>
                            </p>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        Tous les questionnaires sont complets !
                    </div>
                {% endif %}
                
                <div class="alert alert-info">
                    <h6>
                        <i class="fas fa-lightbulb me-2"></i>
                        Conseils
                    </h6>
                    <ul class="mb-0">
                        <li>Vérifiez régulièrement les statistiques</li>
                        <li>Assurez-vous que tous les questionnaires sont complets</li>
                        <li>Testez les questionnaires en mode étudiant</li>
                    </ul>
                </div>
                
                <div class="text-center">
                    <a href="{{ path('etudiant_dashboard') }}" class="btn btn-outline-dark">
                        <i class="fas fa-user-graduate me-1"></i> Tester mode étudiant
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Graphique (simplifié) -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i> Vue d'ensemble
                </h5>
            </div>
            <div class="card-body">
                <canvas id="adminChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('adminChart').getContext('2d');
    
    // Données simulées pour le graphique
    const data = {
        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
        datasets: [
            {
                label: 'Questionnaires créés',
                data: [2, 5, 3, 8, 4, 7],
                borderColor: '#5e72e4',
                backgroundColor: 'rgba(94, 114, 228, 0.1)',
                fill: true,
                tension: 0.4
            },
            {
                label: 'Réponses',
                data: [10, 25, 18, 35, 22, 40],
                borderColor: '#2dce89',
                backgroundColor: 'rgba(45, 206, 137, 0.1)',
                fill: true,
                tension: 0.4
            }
        ]
    };
    
    new Chart(ctx, {
        type: 'line',
        data: data,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
});
</script>
{% endblock %}
{% endblock %}