                tension: 0.4
            },
            {
                label: 'Réponses',
                data: [10, 25, 18, 35, 22, 40],
                borderColor: '#2dce89',
                backgroundColor: 'rgba(45, 206, 137, 0.1)',
                fill: true,
                tension: 0.4
            }
        ]
    };
    
    new Chart(ctx, {
        type: 'line',
        data: data,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
});
// Graphique d'évolution mensuelle des séances
const evolutionCtx = document.getElementById('evolutionMeditationChart')?.getContext('2d');
if (evolutionCtx) {
    new Chart(evolutionCtx, {
        type: 'line',
        data: {
            labels: {{ meditation.evolution_labels|json_encode|raw }},
            datasets: [{
                label: 'Nouvelles séances',
                data: {{ meditation.evolution_data|json_encode|raw }},
                borderColor: '#4CAF50',
                backgroundColor: 'rgba(76, 175, 80, 0.1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { precision: 0 }
                }
            }
        }
    });
}

// Graphique top 5 catégories
const topCatCtx = document.getElementById('topCategoriesMeditationChart')?.getContext('2d');
if (topCatCtx) {
    new Chart(topCatCtx, {
        type: 'doughnut',
        data: {
            labels: {{ meditation.top_categories_labels|json_encode|raw }},
            datasets: [{
                data: {{ meditation.top_categories_data|json_encode|raw }},
                backgroundColor: [
                    '#4CAF50', '#2196F3', '#FF9800', '#F44336', '#9C27B0'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom' },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.label || '';
                            if (label) label += ': ';
                            label += context.raw + ' séance' + (context.raw > 1 ? 's' : '');
                            return label;
                        }
                    }
                }
            }
        }
    });
}
</script>
