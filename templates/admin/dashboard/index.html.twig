<script>
document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('adminChart').getContext('2d');
    
    // Données simulées pour le graphique
    const data = {
        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
