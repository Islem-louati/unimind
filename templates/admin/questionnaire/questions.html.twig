{% extends 'base.html.twig' %}

{% block title %}Questions - {{ questionnaire.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>üìù Questions du questionnaire</h1>
            <p class="lead">{{ questionnaire.nom }} ({{ questionnaire.type }})</p>
        </div>
        <div>
            <a href="{{ path('admin_questionnaire_index') }}" class="btn btn-secondary">
                ‚Üê Retour aux questionnaires
            </a>
        </div>
    </div>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    <!-- Statistiques -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <h3>{{ questions|length }}</h3>
                    <p class="text-muted">Questions ajout√©es</p>
                </div>
                <div class="col-md-4 text-center">
                    <h3>{{ questionnaire.nbreQuestions }}</h3>
                    <p class="text-muted">Questions pr√©vues</p>
                </div>
                <div class="col-md-4 text-center">
                    <h3 class="{% if questions|length == questionnaire.nbreQuestions %}text-success{% else %}text-warning{% endif %}">
                        {% if questionnaire.nbreQuestions > 0 %}
                            {{ ((questions|length / questionnaire.nbreQuestions) * 100)|round }}%
                        {% else %}
                            0%
                        {% endif %}
                    </h3>
                    <p class="text-muted">Compl√©tion</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Actions -->
    <div class="row mb-4">
        <div class="col-md-4">
            <a href="{{ path('admin_question_new', {'questionnaireId': questionnaire.questionnaireId}) }}" 
               class="btn btn-primary w-100">
                ‚ûï Ajouter une question
            </a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('admin_question_bulk', {'questionnaireId': questionnaire.questionnaireId}) }}" 
               class="btn btn-info w-100">
                üìã Ajout en masse
            </a>
        </div>
        <div class="col-md-4">
            {% if questions|length == questionnaire.nbreQuestions %}
                <div class="alert alert-success text-center mb-0">
                    <i class="fas fa-check-circle"></i> Questionnaire complet
                </div>
            {% else %}
                <div class="alert alert-warning text-center mb-0">
                    <i class="fas fa-exclamation-triangle"></i> {{ questionnaire.nbreQuestions - questions|length }} questions manquantes
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Liste des questions -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Liste des questions ({{ questions|length }})</h5>
        </div>
        <div class="card-body">
            {% if questions|length > 0 %}
                <div class="list-group">
                    {% for question in questions|sort((a, b) => a.ordre <=> b.ordre) %}
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <span class="badge bg-secondary me-2">#{{ question.ordre }}</span>
                                        {{ question.texte }}
                                    </h6>
                                    <small class="text-muted">
                                        Type: {{ question.type }} | 
                                        ID: {{ question.questionId }}
                                    </small>
                                </div>
                                <div class="btn-group">
                                    <a href="{{ path('admin_question_edit', {'id': question.questionId}) }}" 
                                       class="btn btn-sm btn-outline-warning">
                                        ‚úèÔ∏è
                                    </a>
                                    <form method="post" 
                                          action="{{ path('admin_question_delete', {'id': question.questionId}) }}" 
                                          class="d-inline">
                                        <input type="hidden" name="_token" 
                                               value="{{ csrf_token('delete' ~ question.questionId) }}">
                                        <button class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Supprimer cette question ?')">
                                            üóëÔ∏è
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucune question</h5>
                    <p class="text-muted">Commencez par ajouter des questions √† ce questionnaire.</p>
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Pr√©visualisation √©tudiant -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">üëÅÔ∏è Pr√©visualisation √©tudiant</h5>
        </div>
        <div class="card-body">
            <p>Comment les √©tudiants verront ce questionnaire :</p>
            <a href="{{ path('etudiant_questionnaire_passer', {'id': questionnaire.questionnaireId}) }}" 
               target="_blank" class="btn btn-outline-primary">
                <i class="fas fa-eye"></i> Voir comme un √©tudiant
            </a>
        </div>
    </div>
</div>
{% endblock %}