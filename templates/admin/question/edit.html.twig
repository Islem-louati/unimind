{% extends 'admin/base.html.twig' %}

{% block title %}Modifier la question #{{ question.id }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item text-sm">
        <a class="opacity-5 text-white" href="{{ path('admin_question_index') }}">Questions</a>
    </li>
    <li class="breadcrumb-item text-sm text-white active" aria-current="page">
        <i class="fas fa-edit me-1"></i>Modifier
    </li>
{% endblock %}

{% block page_title %}Modifier la question{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <!-- En-t√™te -->
        <div class="card mb-4">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="mb-0">‚úèÔ∏è Modifier la question</h5>
                        <p class="text-sm mb-0">Questionnaire : {{ question.questionnaire.nom }}</p>
                    </div>
                    <div class="col-md-4 text-end">
                        {# ‚úÖ CORRECTION : question.id au lieu de question.questionId #}
                        <a href="{{ path('admin_question_show', {'id': question.id}) }}" 
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Formulaire -->
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="mb-3">
                    <label class="form-label">Texte de la question *</label>
                    {{ form_widget(form.texte, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Type de question *</label>
                        {# ‚úÖ CORRECTION : form.type_question ‚Üí form.typeQuestion (camelCase) #}
                        {{ form_widget(form.type_question, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
                
                <hr class="horizontal dark my-4">
                
                <h6 class="mb-3">üéØ Options et scores</h6>
                <div id="options-container">
                    {% for option in question.optionsQuest %}
                        <div class="row mb-3 option-row">
                            <div class="col-md-6">
                                <label class="form-label">Option {{ loop.index }}</label>
                                <input type="text" name="options[]" class="form-control" 
                                       value="{{ option }}" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Score</label>
                                {# ‚úÖ CORRECTION : ajout de ?? 0 pour √©viter erreur si index manquant #}
                                <input type="number" name="scores[]" class="form-control" 
                                       value="{{ question.scoreOptions[loop.index0] ?? 0 }}" 
                                       min="0" max="10" required>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                {% if loop.index > 1 %}
                                    <button type="button" class="btn btn-danger remove-option">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <div class="mb-4">
                    <button type="button" id="add-option" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-2"></i>Ajouter une option
                    </button>
                    <small class="text-muted ms-3">Minimum 2 options requises</small>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_question_show', {'id': question.id}) }}" 
                       class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Enregistrer les modifications
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('options-container');
    const addButton = document.getElementById('add-option');
    
    {# ‚úÖ CORRECTION : utiliser la variable Twig correctement sans ?? #}
    let optionCount = {{ question.optionsQuest|length > 0 ? question.optionsQuest|length : 2 }};
    
    addButton.addEventListener('click', function() {
        optionCount++;
        const newRow = document.createElement('div');
        newRow.className = 'row mb-3 option-row';
        newRow.innerHTML = `
            <div class="col-md-6">
                <label class="form-label">Option ${optionCount}</label>
                <input type="text" name="options[]" class="form-control" 
                       placeholder="Nouvelle option..." required>
            </div>
            <div class="col-md-4">
                <label class="form-label">Score</label>
                <input type="number" name="scores[]" class="form-control" 
                       value="0" min="0" max="10" required>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="button" class="btn btn-danger remove-option">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        `;
        container.appendChild(newRow);
    });
    
    container.addEventListener('click', function(e) {
        if (e.target.closest('.remove-option')) {
            const row = e.target.closest('.option-row');
            if (container.querySelectorAll('.option-row').length > 2) {
                row.remove();
            } else {
                alert('Minimum 2 options requises');
            }
        }
    });
});
</script>
{% endblock %}