{% extends 'base1.html.twig' %}

{% block title %}Nouvelle Séance de Méditation{% endblock %}

{% block breadcrumb_current %}Nouvelle Séance{% endblock %}

{% block page_title %}Nouvelle Séance de Méditation{% endblock %}

{% block content %}
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
          <div>
            <h6>Créer une nouvelle séance</h6>
            <p class="text-sm mb-0">
              <i class="fas fa-headphones me-1"></i>
              Ajoutez une nouvelle séance de méditation
            </p>
          </div>
          <a href="{{ path('admin_seance_meditation_by_categorie', {'id': categorie_id}) }}" 
             class="btn btn-dark btn-sm mb-0">
            <i class="fas fa-arrow-left me-1"></i> Retour
          </a>
        </div>
        <div class="card-body">
          {{ include('admin/seance_meditation/_form.html.twig', {
            'form': form,
            'seance_meditation': seance_meditation,
            'categorie_id': categorie_id,
            'button_label': 'Créer'
          }) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}